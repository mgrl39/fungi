<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>{{ title }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <!-- Google Fonts: Montserrat -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700;900&display=swap" rel="stylesheet">
  <style>
    /* Fondo épico con gradiente oscuro */
    body {
      background: linear-gradient(135deg, #141e30, #243b55);
      color: #fff;
      font-family: 'Montserrat', sans-serif;
      margin: 0;
      padding: 0;
      overflow-x: hidden;
    }
    /* Animación flotante para el título */
    @keyframes float {
      0% { transform: translateY(0); }
      50% { transform: translateY(-20px); }
      100% { transform: translateY(0); }
    }
    .float-animation {
      animation: float 3s ease-in-out infinite;
    }
    /* Contenedor épico centrado */
    .epic-container {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      position: relative;
      z-index: 1;
      padding: 0 15px;
    }
    /* Estilo épico para el encabezado 404 */
    .epic-heading {
      font-size: 10rem;
      font-weight: 900;
      margin-bottom: 0;
      text-shadow: 4px 4px 8px rgba(0, 0, 0, 0.7);
    }
    /* Subtítulo épico */
    .epic-subheading {
      font-size: 2rem;
      margin-bottom: 2rem;
    }
    /* Botón épico personalizado */
    .epic-btn {
      font-size: 1.5rem;
      padding: 0.75rem 2rem;
      border-radius: 50px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .epic-btn:hover {
      transform: scale(1.05);
      box-shadow: 0 0 20px rgba(255, 255, 255, 0.4);
    }
    /* Contenedor de partículas */
    #particles-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 0;
    }
  </style>
</head>
<body>
  <!-- Contenedor para las partículas de fondo -->
  <div id="particles-container"></div>

  <div class="container epic-container">
    <h1 class="epic-heading float-animation">404</h1>
    <p class="epic-subheading">¡Oops! La página que buscas se ha perdido en el espacio.</p>
    <a href="/" class="btn btn-primary epic-btn">Volver a Inicio</a>
  </div>

  <!-- jQuery y Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    // Al cargarse la página, creamos partículas animadas en el fondo
    document.addEventListener('DOMContentLoaded', function() {
      const particlesContainer = document.getElementById('particles-container');
      const numParticles = 50; // Número de partículas (ajusta según prefieras)
      for (let i = 0; i < numParticles; i++) {
        const particle = document.createElement('div');
        particle.style.position = 'absolute';
        particle.style.width = '5px';
        particle.style.height = '5px';
        particle.style.backgroundColor = 'rgba(255, 255, 255, 0.5)';
        particle.style.borderRadius = '50%';
        particle.style.left = Math.random() * 100 + '%';
        particle.style.top = Math.random() * 100 + '%';
        // Duración aleatoria para la animación flotante
        const duration = Math.random() * 3 + 2;
        particle.style.animation = `float ${duration}s ease-in-out infinite`;
        particlesContainer.appendChild(particle);
      }
    });
  </script>
</body>
</html>
