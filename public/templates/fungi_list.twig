<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <!-- Google Fonts: Montserrat -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700;900&display=swap" rel="stylesheet">
  <style>
  </style>
</head>
<body>
  <!-- Partículas en el fondo -->
  <div id="particles-container"></div>

  <!-- Incluir el header con navegación extendida -->
  {% include 'header.twig' %}
   <!-- Incluir el widget flotante para cambiar la vista -->
  {% include 'view_toggle.twig' %}
  

  <!-- Contenido principal -->
  <div class="container epic-container">
    <h1 class="text-center mb-5">{{ title }}</h1>
    <div id="fungi-list" class="row">
      {% for fungus in fungis %}
      <div class="col-md-4 mb-4">
        <div class="card fungus-card">
          <div class="card-body">
            <h5 class="card-title">{{ fungus.name }}</h5>
            <p class="card-text">Autor: {{ fungus.author }}</p>
            <a href="/fungus?id={{ fungus.id }}" class="btn btn-primary">Ver detalles</a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
    <div id="loader">
      <p>Cargando más fungis...</p>
    </div>
  </div>

{% include 'footer.twig' %}

  <!-- jQuery y Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    // Infinite scroll: carga más fungis cuando se alcanza el fondo
    let page = 2;
    let loading = false;
    function loadMoreFungis() {
      if (loading) return;
      loading = true;
      $("#loader").show();
      $.ajax({
        url: "/?action=load&page=" + page,
        method: "GET",
        dataType: "json",
        success: function(data) {
          if (data.length > 0) {
            data.forEach(function(fungus) {
              let html = `
              <div class="col-md-4 mb-4">
                <div class="card fungus-card">
                  <div class="card-body">
                    <h5 class="card-title">${fungus.name}</h5>
                    <p class="card-text">Autor: ${fungus.author}</p>
                    <a href="/fungus?id=${fungus.id}" class="btn btn-primary">Ver detalles</a>
                  </div>
                </div>
              </div>
              `;
              $("#fungi-list").append(html);
            });
            page++;
            loading = false;
            $("#loader").hide();
          } else {
            $("#loader").html("<p>No hay más fungis.</p>");
          }
        },
        error: function() {
          console.error("Error al cargar más fungis.");
          loading = false;
          $("#loader").hide();
        }
      });
    }
    $(window).scroll(function() {
      if ($(window).scrollTop() + $(window).height() >= $(document).height() - 100) {
        loadMoreFungis();
      }
    });
    document.addEventListener('DOMContentLoaded', function() {
      const particlesContainer = document.getElementById('particles-container');
      const numParticles = 50;
      for (let i = 0; i < numParticles; i++) {
        const particle = document.createElement('div');
        particle.style.position = 'absolute';
        particle.style.width = '5px';
        particle.style.height = '5px';
        particle.style.backgroundColor = 'rgba(255, 255, 255, 0.5)';
        particle.style.borderRadius = '50%';
        particle.style.left = Math.random() * 100 + '%';
        particle.style.top = Math.random() * 100 + '%';
        const duration = Math.random() * 3 + 2;
        particle.style.animation = `float ${duration}s ease-in-out infinite`;
        particlesContainer.appendChild(particle);
      }
    });
  </script>
</body>
</html>
