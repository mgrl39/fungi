<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>{{ title }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <!-- Google Fonts: Montserrat -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/assets/css/login.css">
  <style>
    /* Fondo degradado épico y tipografía moderna */
    body {
      background: linear-gradient(135deg, #141e30, #243b55);
      color: #fff;
      font-family: 'Montserrat', sans-serif;
      margin: 0;
      padding: 0;
    }
    /* Contenedor para centrar el formulario vertical y horizontalmente */
    .login-container {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }
    /* Caja de login con fondo semitransparente y bordes redondeados */
    .login-box {
      background: rgba(0, 0, 0, 0.6);
      padding: 40px;
      border-radius: 10px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.8);
      width: 100%;
      max-width: 400px;
    }
    /* Título del formulario */
    .login-box h1 {
      font-size: 2.5rem;
      margin-bottom: 20px;
      font-weight: 700;
    }
    /* Estilos para inputs: fondo transparente, borde blanco semi-transparente */
    .form-control {
      background: transparent;
      border: 1px solid rgba(255, 255, 255, 0.7);
      color: #fff;
    }
    .form-control:focus {
      background: transparent;
      border-color: #fff;
      box-shadow: none;
      color: #fff;
    }
    /* Estilos para las etiquetas */
    label {
      font-weight: 700;
    }
    /* Botón personalizado con efecto de hover */
    .btn-primary {
      background-color: #4caf50;
      border-color: #4caf50;
      font-size: 1.2rem;
      padding: 10px 20px;
      border-radius: 50px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .btn-primary:hover {
      transform: scale(1.05);
      box-shadow: 0 0 20px rgba(255, 255, 255, 0.4);
    }
  </style>
</head>
<body>
  <div class="login-container">
    <div class="login-box text-center">
      <h1>{{ title }}</h1>
      
      {% if error %}
      <div class="alert alert-danger" role="alert">
          {{ error }}
      </div>
      {% endif %}

      {% if success %}
      <div class="alert alert-success" role="alert">
          {{ success }}
      </div>
      {% endif %}

      <form action="/login" method="post">
        <div class="form-group text-left">
          <label for="username">Usuario o Email</label>
          <input type="text" class="form-control" id="username" name="username" 
                 required autocomplete="username">
        </div>
        <div class="form-group text-left">
          <label for="password">Contraseña</label>
          <input type="password" class="form-control" id="password" name="password" 
                 required autocomplete="current-password">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
      </form>
      <div class="mt-3">
        <a href="/register">¿No tienes una cuenta? Regístrate</a>
      </div>
    </div>
  </div>

  <!-- jQuery y Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="/assets/js/script.js"></script>

  <script>
  document.querySelector('form').addEventListener('submit', function(e) {
      // Eliminar espacios en blanco al inicio y final
      document.getElementById('username').value = document.getElementById('username').value.trim();
      document.getElementById('password').value = document.getElementById('password').value.trim();
  });
  </script>
</body>
</html>
