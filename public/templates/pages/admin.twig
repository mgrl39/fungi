<!DOCTYPE html>
<html lang="{{ idioma_actual }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/assets/lib/twbs/bootstrap/dist/css/bootstrap.min.css">
    
    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="/assets/styles/generic.css">
    <link rel="stylesheet" href="/assets/styles/components/navbar.css">
    <link rel="stylesheet" href="/assets/styles/components/footer.css">
    <link rel="stylesheet" href="/assets/styles/admin.css">
    
    <!-- Font Awesome para iconos -->
    <link rel="stylesheet" href="/assets/lib/fontawesome/fontawesome-free-6.4.0-web/css/all.min.css">
    
    <style>
        .admin-sidebar {
            min-height: calc(100vh - 56px);
            background-color: #343a40;
            padding-top: 20px;
        }
        .admin-sidebar .nav-link {
            color: rgba(255, 255, 255, 0.75);
            border-radius: 0;
        }
        .admin-sidebar .nav-link:hover {
            color: rgba(255, 255, 255, 1);
        }
        .admin-sidebar .nav-link.active {
            color: white;
            background-color: rgba(255, 255, 255, 0.1);
            border-left: 4px solid #0d6efd;
        }
        .admin-main {
            padding: 20px;
        }
        .stats-card {
            background-color: white;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }
        .stats-card:hover {
            transform: translateY(-5px);
        }
    </style>
</head>
<body>
    <header>
        {% include 'components/navbar.twig' %}
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar de administración -->
            <nav class="col-md-3 col-lg-2 d-md-block admin-sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/admin">
                                <i class="fas fa-home me-2"></i>
                                {{ _('Dashboard') }}
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/users">
                                <i class="fas fa-users me-2"></i>
                                {{ _('Usuarios') }}
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/fungi">
                                <i class="fas fa-mushroom me-2"></i>
                                {{ _('Hongos') }}
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/reports">
                                <i class="fas fa-flag me-2"></i>
                                {{ _('Reportes') }}
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/settings">
                                <i class="fas fa-cog me-2"></i>
                                {{ _('Configuración') }}
                            </a>
                        </li>
                        <li class="nav-item mt-4">
                            <a class="nav-link text-danger" href="/">
                                <i class="fas fa-arrow-left me-2"></i>
                                {{ _('Volver al sitio') }}
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            
            <!-- Contenido principal -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 admin-main">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">{{ _('Panel de Administración') }}</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="btn-group me-2">
                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-download me-1"></i>
                                {{ _('Exportar') }}
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-print me-1"></i>
                                {{ _('Imprimir') }}
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Tarjetas de estadísticas -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="stats-card">
                            <h5>{{ _('Total de hongos') }}</h5>
                            <h2 class="text-primary">{{ stats.total_fungi }}</h2>
                            <p class="text-muted small mb-0">
                                <i class="fas fa-arrow-up text-success"></i>
                                12% {{ _('desde el mes pasado') }}
                            </p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stats-card">
                            <h5>{{ _('Total de usuarios') }}</h5>
                            <h2 class="text-success">{{ stats.total_users }}</h2>
                            <p class="text-muted small mb-0">
                                <i class="fas fa-arrow-up text-success"></i>
                                8% {{ _('desde el mes pasado') }}
                            </p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stats-card">
                            <h5>{{ _('Visualizaciones') }}</h5>
                            <h2 class="text-info">{{ stats.views ?? '2,453' }}</h2>
                            <p class="text-muted small mb-0">
                                <i class="fas fa-arrow-up text-success"></i>
                                24% {{ _('desde el mes pasado') }}
                            </p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stats-card">
                            <h5>{{ _('Nuevos registros') }}</h5>
                            <h2 class="text-warning">{{ stats.new_users ?? '38' }}</h2>
                            <p class="text-muted small mb-0">
                                <i class="fas fa-arrow-down text-danger"></i>
                                5% {{ _('desde el mes pasado') }}
                            </p>
                        </div>
                    </div>
                </div>
                
                <!-- Actividad reciente -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <i class="fas fa-history me-1"></i>
                        {{ _('Actividad reciente') }}
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>{{ _('Usuario') }}</th>
                                    <th>{{ _('Acción') }}</th>
                                    <th>{{ _('Elemento') }}</th>
                                    <th>{{ _('Fecha') }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if stats.recent_activity is defined %}
                                    {% for activity in stats.recent_activity %}
                                        <tr>
                                            <td>{{ activity.username }}</td>
                                            <td>{{ activity.action }}</td>
                                            <td>{{ activity.item }}</td>
                                            <td>{{ activity.date }}</td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td>admin</td>
                                        <td>{{ _('Creó') }}</td>
                                        <td>Amanita caesarea</td>
                                        <td>{{ "now"|date("Y-m-d H:i") }}</td>
                                    </tr>
                                    <tr>
                                        <td>micologia</td>
                                        <td>{{ _('Modificó') }}</td>
                                        <td>Boletus edulis</td>
                                        <td>{{ "now"|date_modify("-2 hours")|date("Y-m-d H:i") }}</td>
                                    </tr>
                                    <tr>
                                        <td>user123</td>
                                        <td>{{ _('Se registró') }}</td>
                                        <td>-</td>
                                        <td>{{ "now"|date_modify("-1 day")|date("Y-m-d H:i") }}</td>
                                    </tr>
                                {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <!-- Últimos hongos añadidos -->
                <div class="card">
                    <div class="card-header bg-light">
                        <i class="fas fa-mushroom me-1"></i>
                        {{ _('Últimos hongos añadidos') }}
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>{{ _('ID') }}</th>
                                        <th>{{ _('Nombre') }}</th>
                                        <th>{{ _('Nombre científico') }}</th>
                                        <th>{{ _('Comestibilidad') }}</th>
                                        <th>{{ _('Fecha') }}</th>
                                        <th>{{ _('Acciones') }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% if stats.recent_fungi is defined %}
                                        {% for fungus in stats.recent_fungi %}
                                            <tr>
                                                <td>{{ fungus.id }}</td>
                                                <td>{{ fungus.name }}</td>
                                                <td><em>{{ fungus.scientific_name }}</em></td>
                                                <td>{{ fungus.edibility }}</td>
                                                <td>{{ fungus.created_at }}</td>
                                                <td>
                                                    <a href="/fungi/{{ fungus.id }}" class="btn btn-sm btn-info">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="/admin/fungi/edit/{{ fungus.id }}" class="btn btn-sm btn-warning">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    {% else %}
                                        <tr>
                                            <td>1</td>
                                            <td>Níscalo</td>
                                            <td><em>Lactarius deliciosus</em></td>
                                            <td>Comestible</td>
                                            <td>{{ "now"|date_modify("-3 days")|date("Y-m-d") }}</td>
                                            <td>
                                                <a href="#" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="#" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>2</td>
                                            <td>Champiñón</td>
                                            <td><em>Agaricus bisporus</em></td>
                                            <td>Comestible</td>
                                            <td>{{ "now"|date_modify("-5 days")|date("Y-m-d") }}</td>
                                            <td>
                                                <a href="#" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="#" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap JS y dependencias -->
    <script src="/assets/lib/twbs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        // Script para activar los tooltips de Bootstrap
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
</body>
</html> 