<!DOCTYPE html>
<html lang="{{ idioma_actual }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    
    {% set styles = [
        '/assets/styles/generic.css',
        '/assets/styles/components/navbar.css', 
        '/assets/styles/components/footer.css',
        '/assets/styles/admin.css',
        '/assets/lib/twbs/bootstrap/dist/css/bootstrap.min.css',
        '/assets/lib/fontawesome/fontawesome-free-6.4.0-web/css/all.min.css'
    ] %}

    {% for style in styles %}
        <link rel="stylesheet" href="{{ style }}">
    {% endfor %}
    
    <style>
        .admin-sidebar {
            min-height: calc(100vh - 56px);
            background-color: #343a40;
            padding-top: 20px;
        }
        .admin-sidebar .nav-link {
            color: rgba(255, 255, 255, 0.75);
            border-radius: 0;
        }
        .admin-sidebar .nav-link:hover {
            color: rgba(255, 255, 255, 1);
        }
        .admin-sidebar .nav-link.active {
            color: white;
            background-color: rgba(255, 255, 255, 0.1);
            border-left: 4px solid #0d6efd;
        }
        .admin-main {
            padding: 20px;
        }
        .stats-card {
            background-color: white;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }
        .stats-card:hover {
            transform: translateY(-5px);
        }
    </style>
</head>
<body>
    <header>
        {% include 'components/navbar.twig' %}
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar de administración -->
            <nav class="col-md-3 col-lg-2 d-md-block admin-sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        {% set menu_items = [
                            {path: '/admin', icon: 'home', text: 'Dashboard', active: true},
                            {path: '/admin/users', icon: 'users', text: 'Usuarios'},
                            {path: '/admin/fungi', icon: 'mushroom', text: 'Hongos'},
                            {path: '/admin/reports', icon: 'flag', text: 'Reportes'},
                            {path: '/admin/settings', icon: 'cog', text: 'Configuración'}
                        ] %}

                        {% for item in menu_items %}
                            <li class="nav-item">
                                <a class="nav-link {{ item.active ? 'active' }}" href="{{ item.path }}">
                                    <i class="fas fa-{{ item.icon }} me-2"></i>
                                    {{ _(item.text) }}
                                </a>
                            </li>
                        {% endfor %}

                        <li class="nav-item mt-4">
                            <a class="nav-link text-danger" href="/">
                                <i class="fas fa-arrow-left me-2"></i>
                                {{ _('Volver al sitio') }}
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            
            <!-- Contenido principal -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 admin-main">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">{{ _('Panel de Administración') }}</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="btn-group me-2">
                            {% set buttons = [
                                {icon: 'download', text: 'Exportar'},
                                {icon: 'print', text: 'Imprimir'}
                            ] %}

                            {% for btn in buttons %}
                                <button type="button" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-{{ btn.icon }} me-1"></i>
                                    {{ _(btn.text) }}
                                </button>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                
                <!-- Tarjetas de estadísticas -->
                <div class="row mb-4">
                    {% set stat_cards = [
                        {title: 'Total de hongos', value: stats.total_fungi, color: 'primary', trend: 12},
                        {title: 'Total de usuarios', value: stats.total_users, color: 'success', trend: 8},
                        {title: 'Visualizaciones', value: stats.views ?? '2,453', color: 'info', trend: 24},
                        {title: 'Nuevos registros', value: stats.new_users ?? '38', color: 'warning', trend: -5}
                    ] %}

                    {% for card in stat_cards %}
                        <div class="col-md-3">
                            <div class="stats-card">
                                <h5>{{ _(card.title) }}</h5>
                                <h2 class="text-{{ card.color }}">{{ card.value }}</h2>
                                <p class="text-muted small mb-0">
                                    <i class="fas fa-arrow-{{ card.trend > 0 ? 'up text-success' : 'down text-danger' }}"></i>
                                    {{ card.trend }}% {{ _('desde el mes pasado') }}
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                
                <!-- Actividad reciente -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <i class="fas fa-history me-1"></i>
                        {{ _('Actividad reciente') }}
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    {% for header in ['Usuario', 'Acción', 'Elemento', 'Fecha'] %}
                                        <th>{{ _(header) }}</th>
                                    {% endfor %}
                                </tr>
                            </thead>
                            <tbody>
                                {% set default_activity = [
                                    {username: 'admin', action: 'Creó', item: 'Amanita caesarea', date: "now"|date("Y-m-d H:i")},
                                    {username: 'micologia', action: 'Modificó', item: 'Boletus edulis', date: "now"|date_modify("-2 hours")|date("Y-m-d H:i")},
                                    {username: 'user123', action: 'Se registró', item: '-', date: "now"|date_modify("-1 day")|date("Y-m-d H:i")}
                                ] %}

                                {% for activity in stats.recent_activity ?? default_activity %}
                                    <tr>
                                        <td>{{ activity.username }}</td>
                                        <td>{{ _(activity.action) }}</td>
                                        <td>{{ activity.item }}</td>
                                        <td>{{ activity.date }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <!-- Últimos hongos añadidos -->
                <div class="card">
                    <div class="card-header bg-light">
                        <i class="fas fa-mushroom me-1"></i>
                        {{ _('Últimos hongos añadidos') }}
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        {% for header in ['ID', 'Nombre', 'Nombre científico', 'Comestibilidad', 'Fecha', 'Acciones'] %}
                                            <th>{{ _(header) }}</th>
                                        {% endfor %}
                                    </tr>
                                </thead>
                                <tbody>
                                    {% set default_fungi = [
                                        {id: 1, name: 'Níscalo', scientific_name: 'Lactarius deliciosus', edibility: 'Comestible', created_at: "now"|date_modify("-3 days")|date("Y-m-d")},
                                        {id: 2, name: 'Champiñón', scientific_name: 'Agaricus bisporus', edibility: 'Comestible', created_at: "now"|date_modify("-5 days")|date("Y-m-d")}
                                    ] %}

                                    {% for fungus in stats.recent_fungi ?? default_fungi %}
                                        <tr>
                                            <td>{{ fungus.id }}</td>
                                            <td>{{ fungus.name }}</td>
                                            <td><em>{{ fungus.scientific_name }}</em></td>
                                            <td>{{ fungus.edibility }}</td>
                                            <td>{{ fungus.created_at }}</td>
                                            <td>
                                                <a href="/fungi/{{ fungus.id }}" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/admin/fungi/edit/{{ fungus.id }}" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap JS y dependencias -->
    <script src="/assets/lib/twbs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
</body>
</html>