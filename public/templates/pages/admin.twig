    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="/assets/scripts/lang_switch.js"></script>
    
    <script>
        // Funci칩n para confirmaci칩n de eliminaci칩n
        function confirmDelete(url) {
            if (confirm('{{ _('쮼st치s seguro de que deseas eliminar este elemento? Esta acci칩n no se puede deshacer.') }}')) {
                window.location.href = url;
            }
        }
        
        // Funci칩n para eliminar imagen
        function confirmDeleteImage(imageId, fungiId) {
            if (confirm('{{ _('쮼st치s seguro de que deseas eliminar esta imagen? Esta acci칩n no se puede deshacer.') }}')) {
                window.location.href = '/admin/delete-image?image_id=' + imageId + '&fungi_id=' + fungiId;
            }
        }
        
        // Inicializar elementos cuando el DOM est칠 listo
        document.addEventListener('DOMContentLoaded', function() {
            // Manejo del modal de edici칩n de usuario
            const editUserButtons = document.querySelectorAll('.edit-user-btn');
            if (editUserButtons) {
                editUserButtons.forEach(button => {
                    button.addEventListener('click', function() {
                        const userId = this.getAttribute('data-user-id');
                        const username = this.getAttribute('data-username');
                        const email = this.getAttribute('data-email');
                        const role = this.getAttribute('data-role');
                        
                        document.getElementById('edit-username').value = username;
                        document.getElementById('edit-email').value = email;
                        document.getElementById('edit-role').value = role;
                        document.getElementById('edit-password').value = '';
                        document.getElementById('editUserForm').action = '/admin/user/edit/' + userId;
                    });
                });
            }
            
            // Previsualizaci칩n de im치genes
            const imageInput = document.getElementById('fungi_images');
            if (imageInput) {
                imageInput.addEventListener('change', function() {
                    const previewContainer = document.getElementById('image-preview-container');
                    previewContainer.innerHTML = '';
                    
                    Array.from(this.files).forEach(file => {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            const imgWrap = document.createElement('div');
                            imgWrap.className = 'position-relative';
                            
                            const img = document.createElement('img');
                            img.src = e.target.result;
                            img.className = 'image-preview';
                            
                            imgWrap.appendChild(img);
                            previewContainer.appendChild(imgWrap);
                        }
                        reader.readAsDataURL(file);
                    });
                });
            }
