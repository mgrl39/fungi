<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <!-- Estilos generales -->
    <link rel="stylesheet" href="/assets/styles/generic.css">
    
    <!-- Estilos de componentes -->
    <link rel="stylesheet" href="/assets/styles/components/navbar.css">
    <link rel="stylesheet" href="/assets/styles/components/footer.css">
    <link rel="stylesheet" href="/assets/styles/components/sidebar.css">
    <link rel="stylesheet" href="/assets/styles/components/ui/alert.css">
    <link rel="stylesheet" href="/assets/styles/components/ui/modal.css">
    <link rel="stylesheet" href="/assets/styles/components/ui/pagination.css">
    <link rel="stylesheet" href="/assets/styles/components/fungi/card.css">
    <link rel="stylesheet" href="/assets/styles/components/fungi/form.css">
    <link rel="stylesheet" href="/assets/styles/components/auth/login_form.css">
    <link rel="stylesheet" href="/assets/styles/components/auth/register_form.css">
    <link rel="stylesheet" href="/assets/styles/components/charts.css">
    
    <!-- Estilos de pÃ¡ginas -->
    <link rel="stylesheet" href="/assets/styles/pages/home.css">
    <link rel="stylesheet" href="/assets/styles/pages/profile.css">
    <link rel="stylesheet" href="/assets/styles/pages/fungi_detail.css">
    <link rel="stylesheet" href="/assets/styles/pages/admin.css">
    <link rel="stylesheet" href="/assets/styles/pages/404.css">

</head>
<body>
    <header>
        {% include 'components/navbar.twig' %}
    </header>

    <main class="container">
        <h1>{{ title }}</h1>
        
        {% if error %}
            <div class="alert alert-danger">
                {{ error }}
            </div>
        {% endif %}

        <div class="row">
            <div class="col-md-8">
                <section class="fungi-list">
                    <h2>Hongos Destacados</h2>
                    {% if fungis is defined and fungis|length > 0 %}
                        <div class="row">
                            {% for fungi in fungis %}
                                <div class="col-md-4 mb-4">
                                    {% include 'components/fungi/card.twig' with {'fungi': fungi} %}
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p>{{ _('No hay hongos disponibles en este momento.') }}</p>
                    {% endif %}
                </section>
            </div>

            <div class="col-md-4">
                {% include 'components/sidebar.twig' %}
            </div>
        </div>
    </main>

    <footer>
        {% include 'components/footer.twig' %}
    </footer>
</body>
</html>
