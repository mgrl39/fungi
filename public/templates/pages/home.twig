<!DOCTYPE html>
<html lang="{{ idioma_actual }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/assets/lib/twbs/bootstrap/dist/css/bootstrap.min.css">
    
    <!-- Estilos personalizados mínimos -->
    <link rel="stylesheet" href="/assets/styles/generic.css">
    <link rel="stylesheet" href="/assets/styles/components/navbar.css">
    <link rel="stylesheet" href="/assets/styles/components/footer.css">
    <link rel="stylesheet" href="/assets/styles/pages/home.css">
    
    <!-- Font Awesome para iconos (versión local) -->
    <link rel="stylesheet" href="/assets/lib/fontawesome/fontawesome-free-6.4.0-web/css/all.min.css">
</head>
<body>
    <header>
        {% include 'components/navbar.twig' %}
    </header>

    <main>
        <!-- Sección Hero -->
        <section class="hero">
            <div class="container">
                <h1 class="hero-title">{{ title }}</h1>
                <p class="hero-text">{{ __d('Descubre la diversidad de hongos, aprende sobre sus características y explora su taxonomía en nuestra base de datos completa.', 'home') }}</p>
                <div class="hero-actions">
                    <a href="/random" class="btn btn-primary btn-lg"><i class="fas fa-random"></i> {{ __d('Hongo Aleatorio', 'home') }}</a>
                    <a href="/statistics" class="btn btn-outline-light btn-lg"><i class="fas fa-chart-bar"></i> {{ __d('Ver Estadísticas', 'home') }}</a>
                </div>
            </div>
        </section>

        <div class="container">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error }}
                </div>
            {% endif %}

            <!-- Sección de Búsqueda -->
            <section class="search-section">
                <h2 class="section-title"><i class="fas fa-search"></i> {{ __d('Buscar Hongos', 'home') }}</h2>
                <form class="search-form" action="/search" method="GET">
                    <div class="search-group">
                        <label for="search-name" class="search-label">{{ __d('Nombre', 'home') }}</label>
                        <input type="text" id="search-name" name="name" class="form-control search-input" placeholder="{{ __d('Buscar por nombre...', 'home') }}">
                    </div>
                    <div class="search-group">
                        <label for="search-edibility" class="search-label">{{ __d('Comestibilidad', 'home') }}</label>
                        <select id="search-edibility" name="edibility" class="form-control search-input">
                            <option value="">{{ __d('Todos', 'home') }}</option>
                            <option value="excelente-comestible">{{ __d('Excelente comestible', 'home') }}</option>
                            <option value="buen-comestible">{{ __d('Buen comestible', 'home') }}</option>
                            <option value="comestible">{{ __d('Comestible', 'home') }}</option>
                            <option value="comestible-precaucion">{{ __d('Comestible con precaución', 'home') }}</option>
                            <option value="no-comestible">{{ __d('No comestible', 'home') }}</option>
                            <option value="sin-valor">{{ __d('Sin valor culinario', 'home') }}</option>
                            <option value="toxica">{{ __d('Tóxica', 'home') }}</option>
                            <option value="mortal">{{ __d('Mortal', 'home') }}</option>
                        </select>
                    </div>
                    <div class="search-group">
                        <button type="submit" class="btn btn-primary btn-block search-button">
                            <i class="fas fa-search"></i> {{ __d('Buscar', 'home') }}
                        </button>
                    </div>
                </form>
            </section>

            <!-- Sección de Hongos Destacados -->
            <section class="featured-section">
                <h2 class="section-title"><i class="fas fa-star"></i> {{ __d('Hongos Destacados', 'home') }}</h2>
                <p class="section-subtitle">{{ __d('Explora nuestra selección de hongos más interesantes', 'home') }}</p>
                <div id="fungi-container" class="fungi-grid">
                    <p class="text-center w-100">{{ __d('Cargando hongos...', 'home') }}</p>
                </div>
            </section>

            <!-- Sección de Categorías -->
            <section class="categories-section">
                <h2 class="section-title"><i class="fas fa-tags"></i> {{ __d('Explora por Categorías', 'home') }}</h2>
                <div class="fungi-grid">
                    <a href="/category/comestible" class="category-card">
                        <div class="category-icon">
                            <i class="fas fa-utensils"></i>
                        </div>
                        <h3 class="category-title">{{ __d('Comestibles', 'home') }}</h3>
                        <span class="category-count">{{ __d('Explora hongos comestibles', 'home') }}</span>
                    </a>
                    <a href="/category/medicinal" class="category-card">
                        <div class="category-icon">
                            <i class="fas fa-mortar-pestle"></i>
                        </div>
                        <h3 class="category-title">{{ __d('Medicinales', 'home') }}</h3>
                        <span class="category-count">{{ __d('Propiedades curativas', 'home') }}</span>
                    </a>
                    <a href="/category/toxic" class="category-card">
                        <div class="category-icon">
                            <i class="fas fa-skull-crossbones"></i>
                        </div>
                        <h3 class="category-title">{{ __d('Tóxicos', 'home') }}</h3>
                        <span class="category-count">{{ __d('Hongos peligrosos', 'home') }}</span>
                    </a>
                    <a href="/category/rare" class="category-card">
                        <div class="category-icon">
                            <i class="fas fa-gem"></i>
                        </div>
                        <h3 class="category-title">{{ __d('Raros', 'home') }}</h3>
                        <span class="category-count">{{ __d('Especies poco comunes', 'home') }}</span>
                    </a>
                </div>
            </section>

            <!-- Sección CTA -->
            <section class="cta-section">
                <h2 class="cta-title">{{ __d('¿Conoces un hongo que no está en nuestra base de datos?', 'home') }}</h2>
                <p class="cta-text">{{ __d('Ayúdanos a expandir nuestra colección de información micológica. Regístrate y contribuye con tus conocimientos.', 'home') }}</p>
                <a href="/register" class="btn btn-primary btn-lg">{{ __d('Únete a nuestra comunidad', 'home') }}</a>
            </section>
        </div>
    </main>

    <footer>
        {% include 'components/footer.twig' %}
    </footer>

    <script src="/assets/lib/jquery.min.js"></script>
    <script src="/assets/lib/twbs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    {% if use_ajax %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Carga inicial de hongos
            cargarHongos('/api/fungi/page/1/limit/12');
            
            // Configurar el formulario de búsqueda
            const searchForm = document.querySelector('.search-form');
            if (searchForm) {
                searchForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    const nameInput = document.getElementById('search-name');
                    const edibilitySelect = document.getElementById('search-edibility');
                    
                    // Priorizar búsqueda por nombre si está presente
                    if (nameInput.value.trim()) {
                        cargarHongos('/api/fungi/search/name/' + encodeURIComponent(nameInput.value.trim()));
                    } else if (edibilitySelect.value) {
                        cargarHongos('/api/fungi/search/edibility/' + encodeURIComponent(edibilitySelect.value));
                    } else {
                        // Si no hay criterios, mostrar todos
                        cargarHongos('/api/fungi/page/1/limit/12');
                    }
                });
            }
            
            // Función para cargar hongos desde la API
            function cargarHongos(apiUrl) {
                const fungiContainer = document.getElementById('fungi-container');
                fungiContainer.innerHTML = '<p class="text-center w-100">{{ __d("Cargando hongos...", "home") }}</p>';
                
                fetch(apiUrl)
                    .then(response => response.json())
                    .then(data => {
                        if (data.success && data.data && data.data.length > 0) {
                            fungiContainer.innerHTML = ''; // Limpiar mensaje de carga
                            
                            data.data.forEach(fungi => {
                                const imageUrls = fungi.image_urls ? fungi.image_urls.split(',') : [];
                                const imageUrl = imageUrls.length > 0 ? imageUrls[0] : '/assets/images/placeholder.jpg';
                                
                                const fungiCard = document.createElement('div');
                                fungiCard.className = 'card h-100';
                                fungiCard.innerHTML = `
                                    <img src="${imageUrl}" class="card-img-top" alt="${fungi.name}">
                                    <div class="card-body">
                                        <h5 class="card-title">${fungi.name.replace(/-/g, ' ')}</h5>
                                        <p class="card-text">${fungi.edibility ? fungi.edibility.replace(/-/g, ' ') : ''}</p>
                                        <a href="/fungi/${fungi.id}" class="btn btn-primary">{{ __d("Ver detalles", "home") }}</a>
                                    </div>
                                `;
                                
                                // Crear el contenedor y añadir la tarjeta
                                const cardContainer = document.createElement('div');
                                cardContainer.appendChild(fungiCard);
                                fungiContainer.appendChild(cardContainer);
                            });
                        } else {
                            fungiContainer.innerHTML = 
                                '<p class="text-center w-100">{{ __d("No hay hongos disponibles con los criterios seleccionados.", "home") }}</p>';
                        }
                    })
                    .catch(error => {
                        console.error('Error al cargar los hongos:', error);
                        fungiContainer.innerHTML = 
                            '<p class="text-center w-100 text-danger">{{ __d("Error al cargar los hongos. Intente nuevamente.", "home") }}</p>';
                    });
            }
        });
    </script>
    {% endif %}
</body>
</html>
