<!DOCTYPE html>
<html lang="{{ idioma_actual }}" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Estilos personalizados mínimos -->
    <link rel="stylesheet" href="/assets/styles/generic.css">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Estilos para AOS -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    
    <!-- Estilos inline mínimos -->
    <style>
        .profile-hero {
            background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), 
                        url('/assets/images/profile-bg.jpg') no-repeat center center;
            background-size: cover;
            padding: 4rem 0;
            margin-bottom: 2rem;
        }
        
        .profile-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
        }
        
        .profile-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }
        
        .stats-card {
            transition: all 0.3s ease;
            border-radius: 0.5rem;
            height: 100%;
            border: none;
        }
        
        .profile-tab-content {
            padding: 2rem 0;
        }
        
        .nav-pills .nav-link.active {
            background-color: var(--bs-primary);
        }
        
        .nav-pills .nav-link {
            color: var(--bs-light);
            padding: 0.8rem 1.5rem;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
        }
        
        .nav-pills .nav-link:hover:not(.active) {
            background-color: rgba(255,255,255,0.1);
        }
    </style>
</head>
<body>
    <header>
        {% include 'components/navbar.twig' %}
    </header>

    <main>
        <!-- Sección Hero de Perfil -->
        <section class="profile-hero text-center text-white">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <img src="{{ user.avatar_url|default('/assets/users/default-avatar.png') }}" 
                             class="rounded-circle img-thumbnail mb-3" 
                             alt="{{ user.username }}" 
                             style="width: 150px; height: 150px; object-fit: cover;">
                        <h1 class="display-5 fw-bold mb-2">{{ user.username }}</h1>
                        <p class="lead mb-3">{{ user.bio|default('Usuario micófilo') }}</p>
                        
                        <div class="d-flex justify-content-center align-items-center gap-3 mb-3">
                            {% if user.location %}
                            <div class="d-flex align-items-center">
                                <i class="fas fa-map-marker-alt text-danger me-2"></i>
                                <span>{{ user.location }}</span>
                            </div>
                            {% endif %}
                            <div class="d-flex align-items-center">
                                <i class="fas fa-calendar-alt text-info me-2"></i>
                                <span>Miembro desde {{ user.created_at|date("d/m/Y") }}</span>
                            </div>
                        </div>
                        
                        {% if is_own_profile %}
                        <div class="mt-3">
                            <button class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                                <i class="fas fa-user-edit me-2"></i> Editar perfil
                            </button>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </section>

        <div class="container py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card border-0 shadow-sm profile-card">
                        <div class="card-body p-0">
                            <ul class="nav nav-pills nav-fill p-3" id="profileTabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="overview-tab" data-bs-toggle="pill" 
                                            data-bs-target="#overview" type="button" role="tab" 
                                            aria-controls="overview" aria-selected="true">
                                        <i class="fas fa-home me-2"></i> Vista general
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="favorites-tab" data-bs-toggle="pill" 
                                            data-bs-target="#favorites" type="button" role="tab" 
                                            aria-controls="favorites" aria-selected="false">
                                        <i class="fas fa-star me-2"></i> Favoritos
                                    </button>
                                </li>
                                {% if is_own_profile %}
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="settings-tab" data-bs-toggle="pill" 
                                            data-bs-target="#settings" type="button" role="tab" 
                                            aria-controls="settings" aria-selected="false">
                                        <i class="fas fa-cog me-2"></i> Configuración
                                    </button>
                                </li>
                                {% endif %}
                            </ul>
                            
                            <div class="tab-content profile-tab-content" id="profileTabsContent">
                                <!-- Pestaña de Vista General -->
                                <div class="tab-pane fade show active profile-tab-content" id="overview" role="tabpanel" aria-labelledby="overview-tab">
                                    <div class="container">
                                        <div class="row g-4">
                                            <div class="col-md-8">
                                                <div class="card h-100 shadow-sm border-0 profile-card" data-aos="fade-up">
                                                    <div class="card-header bg-primary text-white">
                                                        <i class="fas fa-user-circle me-2"></i> Sobre {{ user.username }}
                                                    </div>
                                                    <div class="card-body">
                                                        <p class="lead">{{ user.bio|default('Este usuario no ha añadido una biografía.') }}</p>
                                                        
                                                        <!-- Separador visual -->
                                                        <div class="position-relative py-4 my-4">
                                                            <hr>
                                                            <div class="position-absolute top-50 start-50 translate-middle bg-dark px-3">
                                                                <i class="fas fa-leaf text-success"></i>
                                                            </div>
                                                        </div>
                                                        
                                                        <h5 class="mb-4"><i class="fas fa-chart-line text-success me-2"></i>Estadísticas</h5>
                                                        <div class="row row-cols-2 row-cols-md-3 g-4">
                                                            <div class="col-6 text-center">
                                                                <div class="p-3 rounded-circle mx-auto mb-2" style="width: 70px; height: 70px; background-color: rgba(25, 135, 84, 0.1);">
                                                                    <i class="fas fa-comments text-success fa-2x"></i>
                                                                </div>
                                                                <h3 class="text-success">{{ user.comments_count|default(0) }}</h3>
                                                                <p class="text-muted">Comentarios</p>
                                                            </div>
                                                            <div class="col-6 text-center">
                                                                <div class="p-3 rounded-circle mx-auto mb-2" style="width: 70px; height: 70px; background-color: rgba(13, 202, 240, 0.1);">
                                                                    <i class="fas fa-thumbs-up text-info fa-2x"></i>
                                                                </div>
                                                                <h3 class="text-info">{{ user.likes_count|default(0) }}</h3>
                                                                <p class="text-muted">Me gusta</p>
                                                            </div>
                                                            <div class="col-6 text-center">
                                                                <div class="p-3 rounded-circle mx-auto mb-2" style="width: 70px; height: 70px; background-color: rgba(255, 193, 7, 0.1);">
                                                                    <i class="fas fa-upload text-warning fa-2x"></i>
                                                                </div>
                                                                <h3 class="text-warning">{{ user.contributions|default(0) }}</h3>
                                                                <p class="text-muted">Contribuciones</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="col-md-4">
                                                <div class="card h-100 shadow-sm border-0 profile-card" data-aos="fade-up" data-aos-delay="100">
                                                    <div class="card-header bg-info text-white">
                                                        <i class="fas fa-lightbulb me-2"></i> ¿Sabías que...?
                                                    </div>
                                                    <div class="card-body p-0">
                                                        <div class="p-4">
                                                            <p id="dato-curioso" class="lead mb-3 fst-italic text-center">
                                                                <!-- Aquí se mostrará un dato curioso aleatorio sobre hongos -->
                                                            </p>
                                                            <div class="text-center">
                                                                <button onclick="mostrarDatoAleatorio()" class="btn btn-sm btn-outline-info">
                                                                    <i class="fas fa-sync-alt me-1"></i> Otro dato curioso
                                                                </button>
                                                            </div>
                                                        </div>
                                                        
                                                        <hr class="my-0">
                                                        
                                                        <div class="p-4">
                                                            <h5 class="mb-3"><i class="fas fa-book-reader text-primary me-2"></i>Frases micológicas</h5>
                                                            <blockquote class="blockquote text-center">
                                                                <p id="frase-micologica" class="mb-0"></p>
                                                                <footer class="blockquote-footer mt-2" id="autor-frase">Autor</footer>
                                                            </blockquote>
                                                            <div class="text-center mt-3">
                                                                <button onclick="mostrarFraseAleatoria()" class="btn btn-sm btn-outline-primary">
                                                                    <i class="fas fa-quote-right me-1"></i> Otra frase
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Pestaña de Favoritos -->
                                <div class="tab-pane fade profile-tab-content" id="favorites" role="tabpanel" aria-labelledby="favorites-tab">
                                    <div class="container">
                                        <div class="row g-4">
                                            <div class="col-12">
                                                <div class="card border-0 shadow-sm profile-card">
                                                    <div class="card-header bg-warning text-dark">
                                                        <h5 class="mb-0"><i class="fas fa-star me-2"></i> Mis hongos favoritos</h5>
                                                    </div>
                                                    <div class="card-body p-3">
                                                        <div class="row" id="favorites-container">
                                                            <!-- Los favoritos se cargarán aquí -->
                                                            <div class="col-12 text-center py-5">
                                                                <div class="spinner-border text-primary" role="status">
                                                                    <span class="visually-hidden">Cargando...</span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row mt-4">
                                            <div class="col-12">
                                                <div class="card border-0 shadow-sm profile-card">
                                                    <div class="card-header bg-danger text-white">
                                                        <h5 class="mb-0"><i class="fas fa-heart me-2"></i> Hongos que me gustan</h5>
                                                    </div>
                                                    <div class="card-body p-3">
                                                        <div class="row" id="likes-container">
                                                            <!-- Los likes se cargarán aquí -->
                                                            <div class="col-12 text-center py-5">
                                                                <div class="spinner-border text-primary" role="status">
                                                                    <span class="visually-hidden">Cargando...</span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Pestaña de Configuración -->
                                {% if is_own_profile %}
                                <div class="tab-pane fade profile-tab-content" id="settings" role="tabpanel" aria-labelledby="settings-tab">
                                    <div class="container">
                                        <h3 class="mb-4">Configuración de la cuenta</h3>
                                        
                                        <div class="card border-0 shadow-sm profile-card" data-aos="fade-up" data-aos-delay="200">
                                            <div class="card-header bg-danger text-white">
                                                <i class="fas fa-exclamation-triangle me-2"></i> Zona de peligro
                                            </div>
                                            <div class="card-body">
                                                <p class="text-danger">La siguiente accion es irreversible. Procede con precaución.</p>
                                                <div class="d-flex flex-column gap-3">
                                                    <button id="deleteAccount" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                                                        <i class="fas fa-user-slash me-1"></i> Eliminar mi cuenta
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Sección CTA -->
            <section class="my-5 py-5 bg-primary bg-opacity-10 rounded-3 text-center" data-aos="zoom-in">
                <div class="py-4 px-3">
                    <h2 class="display-6 mb-3">¿Quieres contribuir con tus conocimientos?</h2>
                    <p class="lead mb-4">Explora nuestra base de datos de hongos y comparte tus observaciones con la comunidad.</p>
                    <a href="/explore" class="btn btn-primary btn-lg px-4 py-2">
                        <i class="fas fa-microscope me-2"></i> Explorar catálogo
                    </a>
                </div>
            </section>
        </div>
    </main>

    <footer>
        {% include 'components/footer.twig' %}
    </footer>

    <!-- Modal de edición de perfil -->
    {% if is_own_profile %}
    <div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content bg-dark text-light border-0">
                <div class="modal-header">
                    <h5 class="modal-title" id="editProfileModalLabel"><i class="fas fa-user-edit me-2"></i>Editar perfil</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="profileForm">
                        <div class="mb-3">
                            <label for="username" class="form-label">Nombre de usuario</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark text-light border-secondary"><i class="fas fa-user"></i></span>
                                <input type="text" class="form-control bg-dark text-light border-secondary" id="username" value="{{ user.username }}">
                            </div>
                            <div class="form-text text-warning">El nombre de usuario debe ser único. Si lo cambias, tendrás que iniciar sesión con el nuevo nombre.</div>
                        </div>
                        
                        <!-- Avatar -->
                        <div class="mb-3">
                            <label for="avatar" class="form-label">Avatar</label>
                            <input type="file" class="form-control bg-dark text-light border-secondary" id="avatar" accept="image/*" disabled>
                            <div class="mt-2 alert alert-warning">
                                <i class="fas fa-lock me-2"></i> Esta función está bloqueada. Para cambiar tu foto de perfil necesitas una <a href="/premium" class="alert-link">cuenta premium</a>.
                            </div>
                        </div>
                        
                        <!-- Email -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark text-light border-secondary"><i class="fas fa-envelope"></i></span>
                                <input type="email" class="form-control bg-dark text-light border-secondary" id="email" value="{{ user.email }}">
                            </div>
                        </div>
                        
                        <!-- Biografía -->
                        <div class="mb-3">
                            <label for="bio" class="form-label">Biografía</label>
                            <textarea class="form-control bg-dark text-light border-secondary" id="bio" rows="3">{{ user.bio }}</textarea>
                        </div>
                        
                        <!-- Fila con ubicación -->
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label for="location" class="form-label">Ubicación</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-dark text-light border-secondary"><i class="fas fa-map-marker-alt"></i></span>
                                    <input type="text" class="form-control bg-dark text-light border-secondary" id="location" value="{{ user.location }}">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="saveProfile">
                        <i class="fas fa-save me-1"></i> Guardar cambios
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de confirmación para eliminar cuenta -->
    <div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-light border-0">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="deleteAccountModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Eliminar cuenta
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger">
                        <p>¿Estás seguro de que deseas eliminar tu cuenta? Esta acción no se puede deshacer y perderás todos tus datos.</p>
                    </div>
                    <div class="mb-3">
                        <label for="delete_confirmation" class="form-label">Escribe "ELIMINAR" para confirmar:</label>
                        <input type="text" class="form-control bg-dark text-light border-secondary" id="delete_confirmation" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteAccount" disabled>
                        <i class="fas fa-user-slash me-1"></i> Eliminar permanentemente
                    </button>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Bootstrap JS Bundle con Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- AOS Script -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <!-- Scripts de la página -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar AOS
            AOS.init({
                duration: 800,
                easing: 'ease-in-out',
                once: true
            });
            
            // Datos curiosos
            function mostrarDatoAleatorio() {
                const datos = [
                    "¿Sabías que los hongos son más cercanos a los animales que a las plantas?",
                    "El micelio de algunos hongos puede extenderse por varios kilómetros bajo tierra.",
                    "El hongo más grande del mundo es un Armillaria ostoyae en Oregon, que cubre 8.9 km².",
                    "Algunos hongos pueden descomponer plástico y ayudar al medio ambiente.",
                    "Las trufas pueden costar hasta 6.000€ por kilogramo.",
                    "El 90% de las plantas dependen de asociaciones con hongos para sobrevivir.",
                    "Existen más de 120.000 especies de hongos conocidas.",
                    "La penicilina, primer antibiótico descubierto, proviene de un hongo.",
                    "Algunos hongos pueden brillar en la oscuridad (bioluminiscencia).",
                    "Los hongos han existido en la Tierra desde hace más de 1.300 millones de años."
                ];
                
                const indice = Math.floor(Math.random() * datos.length);
                const datoCurioso = document.getElementById('dato-curioso');
                
                // Animación de fade
                datoCurioso.style.opacity = "0";
                setTimeout(() => {
                    datoCurioso.innerText = datos[indice];
                    datoCurioso.style.opacity = "1";
                }, 300);
            }
            
            // Frases micológicas
            function mostrarFraseAleatoria() {
                const frases = [
                    { frase: "Los hongos son los grandes recicladores de la naturaleza.", autor: "Paul Stamets" },
                    { frase: "El estudio de los hongos es un viaje a un mundo fascinante.", autor: "Terence McKenna" },
                    { frase: "Los hongos representan un reino tan diverso como poco comprendido.", autor: "Merlin Sheldrake" },
                    { frase: "Los hongos nos enseñan que la vida persiste incluso en condiciones extremas.", autor: "Alan Rockefeller" },
                    { frase: "Sin los hongos, no habría bosques.", autor: "Suzanne Simard" }
                ];
                
                const indice = Math.floor(Math.random() * frases.length);
                const fraseElement = document.getElementById('frase-micologica');
                const autorElement = document.getElementById('autor-frase');
                
                // Animación de fade
                fraseElement.style.opacity = "0";
                autorElement.style.opacity = "0";
                
                setTimeout(() => {
                    fraseElement.innerText = frases[indice].frase;
                    autorElement.innerText = frases[indice].autor;
                    fraseElement.style.opacity = "1";
                    autorElement.style.opacity = "1";
                }, 300);
            }
            
            // Inicializar datos curiosos y frases
            if (document.getElementById('dato-curioso')) {
                mostrarDatoAleatorio();
            }
            
            if (document.getElementById('frase-micologica')) {
                mostrarFraseAleatoria();
            }
            
            // Cargar favoritos
            function cargarFavoritos() {
                const favoritesContainer = document.getElementById('favorites-container');
                fetch('/api/user/favorites')
                    .then(response => response.json())
                    .then(data => {
                        if (data.success && data.data && data.data.length > 0) {
                            favoritesContainer.innerHTML = '';
                            renderizarHongos(data.data, favoritesContainer);
                        } else {
                            favoritesContainer.innerHTML = '<div class="col-12 text-center py-4"><p class="text-muted">No tienes hongos favoritos todavía.</p></div>';
                        }
                    })
                    .catch(error => {
                        console.error('Error al cargar favoritos:', error);
                        favoritesContainer.innerHTML = '<div class="col-12 text-center py-4"><p class="text-danger">Error al cargar favoritos. Intenta nuevamente.</p></div>';
                    });
            }
            
            // Cargar likes
            function cargarLikes() {
                const likesContainer = document.getElementById('likes-container');
                fetch('/api/user/likes')
                    .then(response => response.json())
                    .then(data => {
                        if (data.success && data.data && data.data.length > 0) {
                            likesContainer.innerHTML = '';
                            renderizarHongos(data.data, likesContainer);
                        } else {
                            likesContainer.innerHTML = '<div class="col-12 text-center py-4"><p class="text-muted">No has dado "me gusta" a ningún hongo todavía.</p></div>';
                        }
                    })
                    .catch(error => {
                        console.error('Error al cargar likes:', error);
                        likesContainer.innerHTML = '<div class="col-12 text-center py-4"><p class="text-danger">Error al cargar likes. Intenta nuevamente.</p></div>';
                    });
            }
            
            // Renderizar hongos en un contenedor
            function renderizarHongos(hongos, contenedor) {
                hongos.forEach(fungi => {
                    const imageUrls = fungi.image_urls ? fungi.image_urls.split(',') : [];
                    const imageUrl = imageUrls.length > 0 ? imageUrls[0] : '/assets/images/placeholder.jpg';
                    
                    const fungiCard = document.createElement('div');
                    fungiCard.className = 'col-md-6 col-lg-4 mb-4';
                    fungiCard.innerHTML = `
                        <div class="card h-100 shadow-sm profile-card border-0">
                            <img src="${imageUrl}" class="card-img-top" alt="${fungi.name}" 
                                 style="height: 160px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title">${fungi.name.replace(/-/g, ' ')}</h5>
                                <p class="card-text text-muted small">
                                    <span class="badge ${getBadgeClass(fungi.edibility)}">
                                        ${fungi.edibility ? fungi.edibility.replace(/-/g, ' ') : ''}
                                    </span>
                                </p>
                            </div>
                            <div class="card-footer bg-transparent border-0">
                                <a href="/fungi/${fungi.id}" class="btn btn-sm btn-outline-primary w-100">
                                    Ver detalles
                                </a>
                            </div>
                        </div>
                    `;
                    
                    contenedor.appendChild(fungiCard);
                });
            }
            
            // Devuelve la clase de badge según la comestibilidad
            function getBadgeClass(edibility) {
                if (!edibility) return 'bg-secondary';
                
                if (edibility.includes('excelente') || edibility.includes('buen-comestible'))
                    return 'bg-success';
                if (edibility.includes('toxica') || edibility.includes('mortal'))
                    return 'bg-danger';
                if (edibility.includes('precaucion'))
                    return 'bg-warning';
                
                return 'bg-info';
            }
            
            // Cargar datos al cambiar de pestaña
            const favoritesTab = document.getElementById('favorites-tab');
            if (favoritesTab) {
                favoritesTab.addEventListener('shown.bs.tab', function (e) {
                    cargarFavoritos();
                    cargarLikes();
                });
            }
            
            // Manejo del formulario de perfil y eliminación de cuenta
            {% if is_own_profile %}
            const saveProfileBtn = document.getElementById('saveProfile');
            if (saveProfileBtn) {
                saveProfileBtn.addEventListener('click', function() {
                    // Aquí iría la lógica para guardar los cambios del perfil
                    const formData = new FormData();
                    formData.append('username', document.getElementById('username').value);
                    formData.append('email', document.getElementById('email').value);
                    formData.append('bio', document.getElementById('bio').value);
                    formData.append('location', document.getElementById('location').value);
                    
                    // Simulación de éxito
                    alert('Perfil actualizado correctamente');
                    document.querySelector('.btn-close').click();
                });
            }
            
            // Validación para eliminar cuenta
            const deleteConfirmation = document.getElementById('delete_confirmation');
            const confirmDeleteBtn = document.getElementById('confirmDeleteAccount');
            
            if (deleteConfirmation && confirmDeleteBtn) {
                deleteConfirmation.addEventListener('input', function() {
                    confirmDeleteBtn.disabled = this.value !== 'ELIMINAR';
                });
                
                confirmDeleteBtn.addEventListener('click', function() {
                    if (deleteConfirmation.value === 'ELIMINAR') {
                        // Aquí iría la lógica para eliminar la cuenta
                        alert('Cuenta eliminada correctamente');
                        window.location.href = '/logout';
                    }
                });
            }
            {% endif %}

            // Inicializar componentes
            window.addEventListener('load', function() {
                if (document.getElementById('dato-curioso')) {
                    mostrarDatoAleatorio();
                }
                
                if (document.getElementById('frase-micologica')) {
                    mostrarFraseAleatoria();
                }
            });
        });
    </script>
</body>
</html>
