        function copyToClipboard(button) {
            const codeBlock = button.closest('.code-block').textContent.trim();
            
            navigator.clipboard.writeText(codeBlock).then(() => {
                const originalIcon = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check"></i>';
                
                setTimeout(() => {
                    button.innerHTML = originalIcon;
                }, 2000);
            });
        }
        
        // Función para añadir botones de copia a todos los bloques de código
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.code-block').forEach(block => {
                // Solo agregamos el botón si no existe ya
                if (!block.querySelector('.copy-btn')) {
                    const copyBtn = document.createElement('button');
                    copyBtn.className = 'btn btn-sm btn-outline-light copy-btn';
                    copyBtn.innerHTML = '<i class="fas fa-copy"></i>';
                    copyBtn.onclick = function() { copyToClipboard(this); };
                    block.appendChild(copyBtn);
                }
            });
        });
    </script>
