{% extends "layouts/base.twig" %}

{% block title %}{{ fungi.name|title|replace({'-': ' '}) }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/assets/styles/pages/fungi_detail.css">
{% endblock %}

{% block content %}
<div class="container">
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">{{ _('Inicio') }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ fungi.name|title|replace({'-': ' '}) }}</li>
        </ol>
    </nav>

    <div class="fungi-detail">
        <div class="fungi-detail-images">
            {% if fungi.image_urls %}
                {% set images = fungi.image_urls|split(',') %}
                <img src="{{ images[0] }}" alt="{{ fungi.name }}" class="fungi-main-image" id="mainImage">
                
                {% if images|length > 1 %}
                    <div class="fungi-thumbnails">
                        {% for image in images %}
                            <img src="{{ image }}" 
                                 alt="{{ fungi.name }}" 
                                 class="fungi-thumbnail {% if loop.first %}active{% endif %}"
                                 onclick="updateMainImage(this.src)">
                        {% endfor %}
                    </div>
                {% endif %}
            {% endif %}
        </div>

        <div class="fungi-detail-info">
            <h1 class="fungi-detail-title">{{ fungi.name|title|replace({'-': ' '}) }}</h1>
            <p class="fungi-detail-subtitle">{{ fungi.taxonomy.scientific_name }}</p>

            <div class="fungi-detail-meta">
                <div class="fungi-meta-item">
                    <span class="fungi-meta-icon">
                        <i class="fas fa-utensils"></i>
                    </span>
                    <div class="fungi-meta-content">
                        <span class="fungi-meta-label">{{ _('Comestibilidad') }}</span>
                        <span class="fungi-meta-value">{{ fungi.edibility|title|replace({'-': ' '}) }}</span>
                    </div>
                </div>

                <div class="fungi-meta-item">
                    <span class="fungi-meta-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </span>
                    <div class="fungi-meta-content">
                        <span class="fungi-meta-label">{{ _('Hábitat') }}</span>
                        <span class="fungi-meta-value">{{ fungi.habitat }}</span>
                    </div>
                </div>
            </div>

            <div class="fungi-properties">
                <div class="fungi-property">
                    <h3>{{ _('Características') }}</h3>
                    <ul>
                        <li><strong>{{ _('Color') }}:</strong> {{ fungi.characteristics.color }}</li>
                        <li><strong>{{ _('Forma') }}:</strong> {{ fungi.characteristics.shape }}</li>
                        <li><strong>{{ _('Tamaño') }}:</strong> {{ fungi.characteristics.size }}</li>
                    </ul>
                </div>

                <div class="fungi-property">
                    <h3>{{ _('Taxonomía') }}</h3>
                    <ul>
                        <li><strong>{{ _('Reino') }}:</strong> {{ fungi.taxonomy.kingdom }}</li>
                        <li><strong>{{ _('Familia') }}:</strong> {{ fungi.taxonomy.family }}</li>
                        <li><strong>{{ _('Género') }}:</strong> {{ fungi.taxonomy.genus }}</li>
                    </ul>
                </div>
            </div>

            {% if fungi.observations %}
            <div class="fungi-observations">
                <h3>{{ _('Observaciones') }}</h3>
                <p>{{ fungi.observations }}</p>
            </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
function updateMainImage(src) {
    document.getElementById('mainImage').src = src;
    document.querySelectorAll('.fungi-thumbnail').forEach(thumb => {
        thumb.classList.remove('active');
        if (thumb.src === src) thumb.classList.add('active');
    });
}
</script>
{% endblock %} 