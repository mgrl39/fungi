<!DOCTYPE html>
<html lang="{{ idioma_actual }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/assets/lib/twbs/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/styles/generic.css">
    <link rel="stylesheet" href="/assets/styles/components/navbar.css">
    <link rel="stylesheet" href="/assets/styles/components/footer.css">
    
    <!-- Animate.css -->
    <link rel="stylesheet" href="/assets/lib/animate.css/animate.min.css">
    <link rel="stylesheet" href="/assets/lib/fontawesome/fontawesome-free-6.4.0-web/css/all.min.css">
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- AOS -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
</head>
<body class="bg-light">
    <header>
        {% include 'components/navbar.twig' %}
    </header>

    <main>
        <!-- Hero Section -->
        <section class="bg-primary text-white py-5 mb-4 animate__animated animate__fadeIn">
            <div class="container">
                <div class="row justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1 class="display-4 fw-bold animate__animated animate__slideInDown">{{ _('Estadísticas') }}</h1>
                        <p class="lead mb-4 animate__animated animate__fadeIn animate__delay-1s">{{ _('Análisis de datos sobre hongos en nuestra base de datos') }}</p>
                    </div>
                </div>
            </div>
        </section>
        
        <div class="container py-5">
            <!-- Resumen de estadísticas -->
            <div class="row g-4 mb-5" data-aos="fade-up">
                {% set stat_cards = [
                    {
                        'icon': 'mushroom',
                        'color': 'primary',
                        'value': stats.total_fungi,
                        'text': _('Hongos totales')
                    },
                    {
                        'icon': 'utensils',
                        'color': 'success', 
                        'value': stats.edible_fungi,
                        'text': _('Hongos comestibles')
                    },
                    {
                        'icon': 'skull-crossbones',
                        'color': 'danger',
                        'value': stats.toxic_fungi,
                        'text': _('Hongos tóxicos')
                    },
                    {
                        'icon': 'users',
                        'color': 'info',
                        'value': stats.total_users,
                        'text': _('Usuarios registrados')
                    }
                ] %}

                {% for card in stat_cards %}
                    <div class="col-md-3">
                        <div class="card h-100 border-0 shadow-sm text-center hover-lift">
                            <div class="card-body p-4">
                                <div class="rounded-circle bg-{{ card.color }} bg-opacity-10 p-3 d-inline-block mb-3">
                                    <i class="fas fa-{{ card.icon }} fa-2x text-{{ card.color }}"></i>
                                </div>
                                <h3 class="display-6 fw-bold mb-2">{{ card.value }}</h3>
                                <p class="text-muted mb-0">{{ card.text }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            
            <!-- Gráficos de estadísticas -->
            {% set charts = [
                {
                    'col': 'col-lg-6',
                    'animation': 'fade-right',
                    'header_bg': 'primary',
                    'icon': 'chart-pie',
                    'title': _('Distribución por comestibilidad'),
                    'id': 'edibilityChart'
                },
                {
                    'col': 'col-lg-6',
                    'animation': 'fade-left',
                    'header_bg': 'success',
                    'icon': 'chart-bar',
                    'title': _('Principales familias'),
                    'id': 'familyChart'
                }
            ] %}

            <div class="row g-4 mb-5">
                {% for chart in charts %}
                    <div class="{{ chart.col }}" data-aos="{{ chart.animation }}">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-header bg-{{ chart.header_bg }} bg-gradient text-white py-3">
                                <h5 class="mb-0"><i class="fas fa-{{ chart.icon }} me-2"></i>{{ chart.title }}</h5>
                            </div>
                            <div class="card-body p-4">
                                <canvas id="{{ chart.id }}" height="250"></canvas>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            
            <div class="row g-4">
                <div class="col-lg-8" data-aos="fade-up">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-info bg-gradient text-white py-3">
                            <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>{{ _('Tendencia de adiciones') }}</h5>
                        </div>
                        <div class="card-body p-4">
                            <canvas id="trendsChart" height="250"></canvas>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4" data-aos="fade-left">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-warning bg-gradient py-3">
                            <h5 class="mb-0"><i class="fas fa-heart me-2"></i>{{ _('Hongos más populares') }}</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                {% for fungi in stats.top_favorites %}
                                    <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-primary rounded-pill me-3">{{ loop.index }}</span>
                                            <a href="/fungi/{{ fungi.id }}" class="text-decoration-none text-dark">{{ fungi.name|replace({'-': ' '})|title }}</a>
                                        </div>
                                        <span class="badge bg-primary rounded-pill">{{ fungi.favorites }}</span>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Nueva sección de hongos más visitados y likeados -->
            <div class="row g-4 mt-4">
                <!-- Hongos más visitados -->
                <div class="col-lg-6" data-aos="fade-right">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-primary bg-gradient text-white py-3">
                            <h5 class="mb-0"><i class="fas fa-eye me-2"></i>{{ _('Hongos más visitados') }}</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                {% for fungi in stats.most_viewed %}
                                    <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-primary rounded-pill me-3">{{ loop.index }}</span>
                                            <a href="/fungi/{{ fungi.id }}" class="text-decoration-none text-dark">{{ fungi.name|replace({'-': ' '})|title }}</a>
                                        </div>
                                        <span class="badge bg-info rounded-pill">{{ fungi.views }} visitas</span>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Hongos más likeados -->
                <div class="col-lg-6" data-aos="fade-left">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-danger bg-gradient text-white py-3">
                            <h5 class="mb-0"><i class="fas fa-thumbs-up me-2"></i>{{ _('Hongos más likeados') }}</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                {% for fungi in stats.top_liked %}
                                    <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-danger rounded-pill me-3">{{ loop.index }}</span>
                                            <a href="/fungi/{{ fungi.id }}" class="text-decoration-none text-dark">{{ fungi.name|replace({'-': ' '})|title }}</a>
                                        </div>
                                        <span class="badge bg-danger rounded-pill">{{ fungi.likes }} likes</span>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </main>

    <footer class="bg-dark text-white py-4 mt-5">
        {% include 'components/footer.twig' %}
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/assets/lib/aos/aos.js"></script>
    <script src="/assets/scripts/aos_init.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar AOS
            AOS.init({
                duration: 800,
                once: true
            });
            
            // Gráfico de Comestibilidad
            const edibilityCtx = document.getElementById('edibilityChart').getContext('2d');
            const edibilityChart = new Chart(edibilityCtx, {
                type: 'pie',
                data: {
                    labels: [
                        '{{ _("Comestibles") }}', 
                        '{{ _("No comestibles") }}', 
                        '{{ _("Tóxicos") }}', 
                        '{{ _("Desconocido") }}'
                    ],
                    datasets: [{
                        data: [
                            {{ stats.edible_fungi }},
                            {{ stats.non_edible_fungi }},
                            {{ stats.toxic_fungi }},
                            {{ stats.unknown_edibility_fungi }}
                        ],
                        backgroundColor: [
                            'rgba(40, 167, 69, 0.7)',
                            'rgba(108, 117, 125, 0.7)',
                            'rgba(220, 53, 69, 0.7)',
                            'rgba(0, 123, 255, 0.7)'
                        ],
                        borderColor: [
                            'rgba(40, 167, 69, 1)',
                            'rgba(108, 117, 125, 1)',
                            'rgba(220, 53, 69, 1)',
                            'rgba(0, 123, 255, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
            
            // Gráfico de Familias
            const familyCtx = document.getElementById('familyChart').getContext('2d');
            const familyChart = new Chart(familyCtx, {
                type: 'bar',
                data: {
                    labels: [{% for family in stats.top_families %}'{{ family.name|replace({'-': ' '})|title }}'{% if not loop.last %}, {% endif %}{% endfor %}],
                    datasets: [{
                        label: '{{ _("Número de especies") }}',
                        data: [{% for family in stats.top_families %}{{ family.count }}{% if not loop.last %}, {% endif %}{% endfor %}],
                        backgroundColor: 'rgba(0, 123, 255, 0.7)',
                        borderColor: 'rgba(0, 123, 255, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: '{{ _("Número de especies") }}'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: '{{ _("Familia") }}'
                            }
                        }
                    }
                }
            });
            
            // Gráfico de Tendencias
            const trendsCtx = document.getElementById('trendsChart').getContext('2d');
            const trendsChart = new Chart(trendsCtx, {
                type: 'line',
                data: {
                    labels: [{% for point in stats.trends %}
                        '{{ point.date }}'{% if not loop.last %}, {% endif %}
                    {% endfor %}],
                    datasets: [{
                        label: '{{ _("Hongos añadidos") }}',
                        data: [{% for point in stats.trends %}
                            {{ point.count }}{% if not loop.last %}, {% endif %}
                        {% endfor %}],
                        fill: true,
                        backgroundColor: 'rgba(23, 162, 184, 0.2)',
                        borderColor: 'rgba(23, 162, 184, 1)',
                        borderWidth: 2,
                        tension: 0.1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: '{{ _("Cantidad") }}'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: '{{ _("Fecha") }}'
                            }
                        }
                    }
                }
            });
            
            const habitatCtx = document.getElementById('habitatChart').getContext('2d');
            const habitatChart = new Chart(habitatCtx, {
                type: 'horizontalBar',
                data: {
                    labels: [{% for habitat in stats.habitats %}
                        '{{ habitat.name|replace({'-': ' '})|title }}'{% if not loop.last %}, {% endif %}
                    {% endfor %}],
                    datasets: [{
                        label: '{{ _("Número de especies") }}',
                        data: [{% for habitat in stats.habitats %}
                            {{ habitat.count }}{% if not loop.last %}, {% endif %}
                        {% endfor %}],
                        backgroundColor: 'rgba(40, 167, 69, 0.7)',
                        borderColor: 'rgba(40, 167, 69, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    scales: {
                        x: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: '{{ _("Número de especies") }}'
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: '{{ _("Hábitat") }}'
                            }
                        }
                    }
                }
            });
        });
    </script>
</body>
</html>