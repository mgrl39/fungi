<!DOCTYPE html>
<html lang="{{ idioma_actual }}" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Estilos personalizados mínimos -->
    <link rel="stylesheet" href="/assets/styles/generic.css">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Estilos inline mínimos -->
    <style>
        .stats-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }
        
        .chart-container {
            position: relative;
            height: 250px;
            width: 100%;
        }
        
        .stats-hero {
            background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), 
                        url('/assets/images/stats-bg.jpg') no-repeat center center;
            background-size: cover;
            padding: 5rem 0;
            margin-bottom: 2rem;
        }
    </style>
</head>
<body>
    <header>
        {% include 'components/navbar.twig' %}
    </header>

    <main>
        <!-- Hero Section -->
        <section class="stats-hero text-white py-5 mb-4 animate__animated animate__fadeIn">
            <div class="container">
                <div class="row justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1 class="display-4 fw-bold">{{ _('Estadísticas') }}</h1>
                        <p class="lead mb-4">{{ _('Análisis de datos sobre hongos en nuestra base de datos') }}</p>
                    </div>
                </div>
            </div>
        </section>
        
        <div class="container py-5">
            <!-- Resumen de estadísticas -->
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 mb-5">
                {% set stat_cards = [
                    {
                        'icon': 'mushroom',
                        'color': 'primary',
                        'value': stats.total_fungi,
                        'text': _('Hongos totales')
                    },
                    {
                        'icon': 'utensils',
                        'color': 'success', 
                        'value': stats.edible_fungi,
                        'text': _('Hongos comestibles')
                    },
                    {
                        'icon': 'skull-crossbones',
                        'color': 'danger',
                        'value': stats.toxic_fungi,
                        'text': _('Hongos tóxicos')
                    },
                    {
                        'icon': 'users',
                        'color': 'info',
                        'value': stats.total_users,
                        'text': _('Usuarios registrados')
                    }
                ] %}

                {% for card in stat_cards %}
                    <div class="col">
                        <div class="card h-100 border-0 shadow-sm text-center stats-card">
                            <div class="card-body p-4">
                                <div class="rounded-circle bg-{{ card.color }} bg-opacity-10 p-3 d-inline-block mb-3" style="width: 80px; height: 80px;">
                                    <i class="fas fa-{{ card.icon }} fa-2x text-{{ card.color }}"></i>
                                </div>
                                <h3 class="display-6 fw-bold mb-2">{{ card.value }}</h3>
                                <p class="text-muted mb-0">{{ card.text }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            
            <!-- Gráficos de estadísticas -->
            <div class="row g-4 mb-5">
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm h-100 stats-card">
                        <div class="card-header bg-primary bg-gradient text-white py-3">
                            <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>{{ _('Distribución por comestibilidad') }}</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="chart-container">
                                <canvas id="edibilityChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm h-100 stats-card">
                        <div class="card-header bg-success bg-gradient text-white py-3">
                            <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>{{ _('Principales familias') }}</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="chart-container">
                                <canvas id="familyChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row g-4">
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm h-100 stats-card">
                        <div class="card-header bg-info bg-gradient text-white py-3">
                            <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>{{ _('Tendencia de adiciones') }}</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="chart-container">
                                <canvas id="trendsChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm h-100 stats-card">
                        <div class="card-header bg-warning bg-gradient text-dark py-3">
                            <h5 class="mb-0"><i class="fas fa-heart me-2"></i>{{ _('Hongos más populares') }}</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                {% for fungi in stats.top_favorites %}
                                    <div class="list-group-item d-flex justify-content-between align-items-center p-3 border-0 bg-transparent">
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-primary rounded-pill me-3">{{ loop.index }}</span>
                                            <a href="/fungi/{{ fungi.id }}" class="text-decoration-none">
                                                {{ fungi.name|replace({'-': ' '})|title }}
                                            </a>
                                        </div>
                                        <span class="badge bg-primary rounded-pill">{{ fungi.favorites }}</span>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Separador visual -->
            <div class="position-relative py-4 my-5">
                <hr>
                <div class="position-absolute top-50 start-50 translate-middle bg-body px-3">
                    <i class="fas fa-chart-network text-primary"></i>
                </div>
            </div>
            
            <!-- Nueva sección de hongos más visitados y likeados -->
            <div class="row g-4">
                <!-- Hongos más visitados -->
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm h-100 stats-card">
                        <div class="card-header bg-primary bg-gradient text-white py-3">
                            <h5 class="mb-0"><i class="fas fa-eye me-2"></i>{{ _('Hongos más visitados') }}</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                {% for fungi in stats.most_viewed %}
                                    <div class="list-group-item d-flex justify-content-between align-items-center p-3 border-0 bg-transparent">
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-primary rounded-pill me-3">{{ loop.index }}</span>
                                            <a href="/fungi/{{ fungi.id }}" class="text-decoration-none">
                                                {{ fungi.name|replace({'-': ' '})|title }}
                                            </a>
                                        </div>
                                        <span class="badge bg-info rounded-pill">{{ fungi.views }} visitas</span>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Hongos más likeados -->
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm h-100 stats-card">
                        <div class="card-header bg-danger bg-gradient text-white py-3">
                            <h5 class="mb-0"><i class="fas fa-thumbs-up me-2"></i>{{ _('Hongos más likeados') }}</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                {% for fungi in stats.top_liked %}
                                    <div class="list-group-item d-flex justify-content-between align-items-center p-3 border-0 bg-transparent">
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-danger rounded-pill me-3">{{ loop.index }}</span>
                                            <a href="/fungi/{{ fungi.id }}" class="text-decoration-none">
                                                {{ fungi.name|replace({'-': ' '})|title }}
                                            </a>
                                        </div>
                                        <span class="badge bg-danger rounded-pill">{{ fungi.likes }} likes</span>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- CTA Section -->
            <section class="my-5 py-5 bg-primary bg-opacity-10 rounded-3 text-center">
                <div class="py-4 px-3">
                    <h2 class="display-6 mb-3">{{ _('¿Quieres conocer más sobre nuestra comunidad?') }}</h2>
                    <p class="lead mb-4">{{ _('Explora nuestros registros de hongos y únete a nuestra creciente base de datos.') }}</p>
                    <a href="/register" class="btn btn-primary btn-lg px-4 py-2">
                        <i class="fas fa-user-plus me-2"></i> {{ _('Únete a nuestra comunidad') }}
                    </a>
                </div>
            </section>
        </div>
    </main>

    <footer>
        {% include 'components/footer.twig' %}
    </footer>
    
    <!-- Bootstrap 5 JS Bundle con Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Configuración de gráficos
            
            // Gráfico de comestibilidad
            new Chart(document.getElementById('edibilityChart'), {
                type: 'doughnut',
                data: {
                    labels: {{ stats.edibility_labels|json_encode|raw }},
                    datasets: [{
                        data: {{ stats.edibility_data|json_encode|raw }},
                        backgroundColor: [
                            '#28a745', // verde para comestibles
                            '#ffc107', // amarillo para precaución
                            '#dc3545', // rojo para tóxicos
                            '#6c757d'  // gris para otros
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right',
                            labels: {
                                color: '#fff'
                            }
                        }
                    }
                }
            });

            // Gráfico de familias
            new Chart(document.getElementById('familyChart'), {
                type: 'bar',
                data: {
                    labels: {{ stats.family_labels|json_encode|raw }},
                    datasets: [{
                        label: '{{ _("Número de especies") }}',
                        data: {{ stats.family_data|json_encode|raw }},
                        backgroundColor: 'rgba(23, 162, 184, 0.7)',
                        borderColor: 'rgba(23, 162, 184, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                color: '#fff'
                            },
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            }
                        },
                        x: {
                            ticks: {
                                color: '#fff'
                            },
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            labels: {
                                color: '#fff'
                            }
                        }
                    }
                }
            });
            
            // Gráfico de tendencias
            new Chart(document.getElementById('trendsChart'), {
                type: 'line',
                data: {
                    labels: {{ stats.trend_labels|json_encode|raw }},
                    datasets: [{
                        label: '{{ _("Nuevos hongos") }}',
                        data: {{ stats.trend_data|json_encode|raw }},
                        fill: false,
                        backgroundColor: 'rgba(13, 110, 253, 0.7)',
                        borderColor: 'rgba(13, 110, 253, 1)',
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                color: '#fff'
                            },
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            }
                        },
                        x: {
                            ticks: {
                                color: '#fff'
                            },
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            labels: {
                                color: '#fff'
                            }
                        }
                    }
                }
            });
        });
    </script>
</body>
</html>