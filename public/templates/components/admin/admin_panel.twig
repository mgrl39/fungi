<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/lib/twbs/bootstrap/dist/css/bootstrap.min.css">
    
    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="/assets/styles/generic.css">
    <link rel="stylesheet" href="/assets/styles/components/navbar.css">
    <link rel="stylesheet" href="/assets/styles/components/footer.css">
    <link rel="stylesheet" href="/assets/styles/components/admin/admin_panel.css">
    
    <!-- Font Awesome para iconos -->
    <link rel="stylesheet" href="/assets/lib/fontawesome/fontawesome-free-6.4.0-web/css/all.min.css">
    <!-- Animate.css para animaciones -->
    <link rel="stylesheet" href="/assets/lib/animate.css/animate.min.css">
    <!-- AOS para efectos de scroll -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <!-- Chart.js para gráficos -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="admin-container">
        <div class="admin-sidebar animate__animated animate__slideInLeft">
            <div class="admin-brand">
                <i class="fas fa-mushroom"></i>
                <span>FungiAdmin</span>
            </div>
            
            <div class="admin-user">
                <div class="admin-avatar">
                    <i class="fas fa-user-shield"></i>
                </div>
                <div class="admin-info">
                    <h5>{{ admin.username }}</h5>
                    <span>{{ _('Administrador') }}</span>
                </div>
            </div>
            
            <nav class="admin-nav">
                <ul>
                    <li class="active" data-tab="dashboard">
                        <a href="#dashboard"><i class="fas fa-tachometer-alt"></i> {{ _('Dashboard') }}</a>
                    </li>
                    <li data-tab="fungi">
                        <a href="#fungi"><i class="fas fa-mushroom"></i> {{ _('Hongos') }}</a>
                    </li>
                    <li data-tab="users">
                        <a href="#users"><i class="fas fa-users"></i> {{ _('Usuarios') }}</a>
                    </li>
                    <li data-tab="statistics">
                        <a href="#statistics"><i class="fas fa-chart-bar"></i> {{ _('Estadísticas') }}</a>
                    </li>
                    <li data-tab="settings">
                        <a href="#settings"><i class="fas fa-cogs"></i> {{ _('Configuración') }}</a>
                    </li>
                </ul>
            </nav>
            
            <div class="admin-logout">
                <a href="/logout" class="btn-logout">
                    <i class="fas fa-sign-out-alt"></i> {{ _('Cerrar sesión') }}
                </a>
            </div>
        </div>
        
        <div class="admin-content">
            <header class="admin-header animate__animated animate__fadeInDown">
                <div class="header-search">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="{{ _('Buscar...') }}">
                </div>
                
                <div class="header-actions">
                    <a href="#" class="header-notification">
                        <i class="fas fa-bell"></i>
                        <span class="badge">3</span>
                    </a>
                    <a href="#" class="header-message">
                        <i class="fas fa-envelope"></i>
                        <span class="badge">5</span>
                    </a>
                    <a href="/" class="header-view-site">
                        <i class="fas fa-external-link-alt"></i>
                        <span>{{ _('Ver sitio') }}</span>
                    </a>
                </div>
            </header>
            
            <main class="admin-main">
                <!-- Dashboard -->
                <section id="dashboard" class="admin-section active animate__animated animate__fadeIn">
                    <h2 class="section-title" data-aos="fade-right">
                        <i class="fas fa-tachometer-alt"></i> {{ _('Dashboard') }}
                    </h2>
                    
                    <div class="stats-cards">
                        <div class="stat-card" data-aos="fade-up" data-aos-delay="100">
                            <div class="stat-icon">
                                <i class="fas fa-mushroom"></i>
                            </div>
                            <div class="stat-info">
                                <h3>{{ stats.totalFungi }}</h3>
                                <p>{{ _('Hongos totales') }}</p>
                            </div>
                        </div>
                        
                        <div class="stat-card" data-aos="fade-up" data-aos-delay="200">
                            <div class="stat-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="stat-info">
                                <h3>{{ stats.totalUsers }}</h3>
                                <p>{{ _('Usuarios registrados') }}</p>
                            </div>
                        </div>
                        
                        <div class="stat-card" data-aos="fade-up" data-aos-delay="300">
                            <div class="stat-icon">
                                <i class="fas fa-eye"></i>
                            </div>
                            <div class="stat-info">
                                <h3>{{ stats.totalViews }}</h3>
                                <p>{{ _('Vistas totales') }}</p>
                            </div>
                        </div>
                        
                        <div class="stat-card" data-aos="fade-up" data-aos-delay="400">
                            <div class="stat-icon">
                                <i class="fas fa-heart"></i>
                            </div>
                            <div class="stat-info">
                                <h3>{{ stats.totalLikes }}</h3>
                                <p>{{ _('Me gusta') }}</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="dashboard-charts" data-aos="fade-up" data-aos-delay="500">
                        <div class="chart-container">
                            <h4><i class="fas fa-chart-line"></i> {{ _('Vistas mensuales') }}</h4>
                            <canvas id="viewsChart"></canvas>
                        </div>
                        
                        <div class="chart-container">
                            <h4><i class="fas fa-chart-pie"></i> {{ _('Hongos por categoría') }}</h4>
                            <canvas id="categoriesChart"></canvas>
                        </div>
                    </div>
                    
                    <div class="recent-activity" data-aos="fade-up" data-aos-delay="600">
                        <h4><i class="fas fa-history"></i> {{ _('Actividad reciente') }}</h4>
                        <div class="activity-list">
                            {% for activity in recentActivities %}
                            <div class="activity-item">
                                <div class="activity-icon">
                                    <i class="fas {{ activity.icon }}"></i>
                                </div>
                                <div class="activity-details">
                                    <p>{{ activity.message }}</p>
                                    <small>{{ activity.time }}</small>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </section>
                
                <!-- Fungi Management -->
                <section id="fungi" class="admin-section">
                    <h2 class="section-title">
                        <i class="fas fa-mushroom"></i> {{ _('Gestión de Hongos') }}
                    </h2>
                    
                    <div class="admin-actions">
                        <button class="btn btn-primary" id="addFungiBtn">
                            <i class="fas fa-plus"></i> {{ _('Añadir hongo') }}
                        </button>
                        <div class="admin-filter">
                            <select>
                                <option value="">{{ _('Todos los tipos') }}</option>
                                {% for category in fungiCategories %}
                                <option value="{{ category.id }}">{{ category.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="admin-search">
                            <input type="text" placeholder="{{ _('Buscar hongo...') }}">
                            <button><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                    
                    <div class="admin-table-container">
                        <table class="admin-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>{{ _('Imagen') }}</th>
                                    <th>{{ _('Nombre') }}</th>
                                    <th>{{ _('Nombre científico') }}</th>
                                    <th>{{ _('Categoría') }}</th>
                                    <th>{{ _('Vistas') }}</th>
                                    <th>{{ _('Me gusta') }}</th>
                                    <th>{{ _('Acciones') }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for fungi in fungiList %}
                                <tr>
                                    <td>{{ fungi.id }}</td>
                                    <td><img src="{{ fungi.image_url }}" alt="{{ fungi.name }}"></td>
                                    <td>{{ fungi.name }}</td>
                                    <td><em>{{ fungi.scientific_name }}</em></td>
                                    <td>{{ fungi.category }}</td>
                                    <td>{{ fungi.views }}</td>
                                    <td>{{ fungi.likes }}</td>
                                    <td class="actions">
                                        <button class="btn-icon btn-edit" data-id="{{ fungi.id }}">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn-icon btn-delete" data-id="{{ fungi.id }}">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                        <button class="btn-icon btn-view" data-id="{{ fungi.id }}">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="admin-pagination">
                        <button><i class="fas fa-chevron-left"></i></button>
                        <span>{{ _('Página') }} 1 {{ _('de') }} 5</span>
                        <button><i class="fas fa-chevron-right"></i></button>
                    </div>
                </section>
                
                <!-- Users Management -->
                <section id="users" class="admin-section">
                    <h2 class="section-title">
                        <i class="fas fa-users"></i> {{ _('Gestión de Usuarios') }}
                    </h2>
                    
                    <div class="admin-actions">
                        <button class="btn btn-primary">
                            <i class="fas fa-user-plus"></i> {{ _('Añadir usuario') }}
                        </button>
                        <div class="admin-filter">
                            <select>
                                <option value="">{{ _('Todos los roles') }}</option>
                                <option value="admin">{{ _('Administrador') }}</option>
                                <option value="editor">{{ _('Editor') }}</option>
                                <option value="user">{{ _('Usuario') }}</option>
                            </select>
                        </div>
                        <div class="admin-search">
                            <input type="text" placeholder="{{ _('Buscar usuario...') }}">
                            <button><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                    
                    <div class="admin-table-container">
                        <table class="admin-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>{{ _('Usuario') }}</th>
                                    <th>{{ _('Email') }}</th>
                                    <th>{{ _('Rol') }}</th>
                                    <th>{{ _('Fecha registro') }}</th>
                                    <th>{{ _('Último acceso') }}</th>
                                    <th>{{ _('Estado') }}</th>
                                    <th>{{ _('Acciones') }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in usersList %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.role }}</td>
                                    <td>{{ user.created_at }}</td>
                                    <td>{{ user.last_login }}</td>
                                    <td>
                                        <span class="status-badge {{ user.is_active ? 'active' : 'inactive' }}">
                                            {{ user.is_active ? _('Activo') : _('Inactivo') }}
                                        </span>
                                    </td>
                                    <td class="actions">
                                        <button class="btn-icon btn-edit" data-id="{{ user.id }}">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn-icon btn-delete" data-id="{{ user.id }}">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                        <button class="btn-icon btn-lock" data-id="{{ user.id }}">
                                            <i class="fas {{ user.is_active ? 'fa-lock' : 'fa-lock-open' }}"></i>
                                        </button>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="admin-pagination">
                        <button><i class="fas fa-chevron-left"></i></button>
                        <span>{{ _('Página') }} 1 {{ _('de') }} 3</span>
                        <button><i class="fas fa-chevron-right"></i></button>
                    </div>
                </section>
                
                <!-- Statistics -->
                <section id="statistics" class="admin-section">
                    <h2 class="section-title">
                        <i class="fas fa-chart-bar"></i> {{ _('Estadísticas') }}
                    </h2>
                    
                    <div class="stats-filter">
                        <div class="date-range">
                            <label>{{ _('Rango de fechas:') }}</label>
                            <select id="dateRangeSelect">
                                <option value="7days">{{ _('Últimos 7 días') }}</option>
                                <option value="30days">{{ _('Últimos 30 días') }}</option>
                                <option value="3months">{{ _('Últimos 3 meses') }}</option>
                                <option value="year">{{ _('Último año') }}</option>
                                <option value="all" selected>{{ _('Todo el tiempo') }}</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="stats-grid">
                        <div class="stats-chart">
                            <h4>{{ _('Vistas por hongo') }}</h4>
                            <canvas id="fungiViewsChart"></canvas>
                        </div>
                        
                        <div class="stats-chart">
                            <h4>{{ _('Nuevos usuarios') }}</h4>
                            <canvas id="newUsersChart"></canvas>
                        </div>
                        
                        <div class="stats-chart">
                            <h4>{{ _('Interacciones por día') }}</h4>
                            <canvas id="interactionsChart"></canvas>
                        </div>
                        
                        <div class="stats-chart">
                            <h4>{{ _('Distribución de roles') }}</h4>
                            <canvas id="rolesChart"></canvas>
                        </div>
                    </div>
                    
                    <div class="stats-summary">
                        <h4>{{ _('Resumen de estadísticas') }}</h4>
                        <div class="summary-grid">
                            <div class="summary-item">
                                <div class="summary-label">{{ _('Promedio de vistas diarias') }}</div>
                                <div class="summary-value">{{ stats.avgDailyViews }}</div>
                            </div>
                            <div class="summary-item">
                                <div class="summary-label">{{ _('Hongo más visto') }}</div>
                                <div class="summary-value">{{ stats.mostViewedFungi }}</div>
                            </div>
                            <div class="summary-item">
                                <div class="summary-label">{{ _('Usuarios activos') }}</div>
                                <div class="summary-value">{{ stats.activeUsers }}</div>
                            </div>
                            <div class="summary-item">
                                <div class="summary-label">{{ _('Tasa de conversión') }}</div>
                                <div class="summary-value">{{ stats.conversionRate }}%</div>
                            </div>
                        </div>
                    </div>
                </section>
                
                <!-- Settings -->
                <section id="settings" class="admin-section">
                    <h2 class="section-title">
                        <i class="fas fa-cogs"></i> {{ _('Configuración') }}
                    </h2>
                    
                    <div class="settings-tabs">
                        <ul class="tabs-nav">
                            <li class="active" data-tab="general">{{ _('General') }}</li>
                            <li data-tab="appearance">{{ _('Apariencia') }}</li>
                            <li data-tab="email">{{ _('Email') }}</li>
                            <li data-tab="backup">{{ _('Respaldo') }}</li>
                        </ul>
                        
                        <div class="tabs-content">
                            <!-- General Settings -->
                            <div id="general" class="tab-pane active">
                                <form class="settings-form">
                                    <div class="form-group">
                                        <label for="siteName">{{ _('Nombre del sitio') }}</label>
                                        <input type="text" id="siteName" value="{{ settings.siteName }}">
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="siteDescription">{{ _('Descripción del sitio') }}</label>
                                        <textarea id="siteDescription">{{ settings.siteDescription }}</textarea>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="adminEmail">{{ _('Email del administrador') }}</label>
                                        <input type="email" id="adminEmail" value="{{ settings.adminEmail }}">
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="itemsPerPage">{{ _('Ítems por página') }}</label>
                                        <input type="number" id="itemsPerPage" value="{{ settings.itemsPerPage }}">
                                    </div>
                                    
                                    <div class="form-actions">
                                        <button type="submit" class="btn btn-primary">{{ _('Guardar cambios') }}</button>
                                    </div>
                                </form>
                            </div>
                            
                            <!-- Appearance Settings -->
                            <div id="appearance" class="tab-pane">
                                <form class="settings-form">
                                    <div class="form-group">
                                        <label for="theme">{{ _('Tema') }}</label>
                                        <select id="theme">
                                            <option value="light" {{ settings.theme == 'light' ? 'selected' : '' }}>{{ _('Claro') }}</option>
                                            <option value="dark" {{ settings.theme == 'dark' ? 'selected' : '' }}>{{ _('Oscuro') }}</option>
                                        </select>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="primaryColor">{{ _('Color primario') }}</label>
                                        <input type="color" id="primaryColor" value="{{ settings.primaryColor }}">
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="logo">{{ _('Logo del sitio') }}</label>
                                        <input type="file" id="logo">
                                        {% if settings.logo %}
                                        <div class="current-logo">
                                            <img src="{{ settings.logo }}" alt="Logo actual">
                                        </div>
                                        {% endif %}
                                    </div>
                                    
                                    <div class="form-actions">
                                        <button type="submit" class="btn btn-primary">{{ _('Guardar cambios') }}</button>
                                    </div>
                                </form>
                            </div>
                            
                            <!-- Email Settings -->
                            <div id="email" class="tab-pane">
                                <form class="settings-form">
                                    <div class="form-group">
                                        <label for="smtpServer">{{ _('Servidor SMTP') }}</label>
                                        <input type="text" id="smtpServer" value="{{ settings.smtpServer }}">
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="smtpPort">{{ _('Puerto SMTP') }}</label>
                                        <input type="number" id="smtpPort" value="{{ settings.smtpPort }}">
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="smtpUser">{{ _('Usuario SMTP') }}</label>
                                        <input type="text" id="smtpUser" value="{{ settings.smtpUser }}">
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="smtpPassword">{{ _('Contraseña SMTP') }}</label>
                                        <input type="password" id="smtpPassword" value="{{ settings.smtpPassword }}">
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="emailFrom">{{ _('Email remitente') }}</label>
                                        <input type="email" id="emailFrom" value="{{ settings.emailFrom }}">
                                    </div>
                                    
                                    <div class="form-actions">
                                        <button type="button" class="btn btn-secondary">{{ _('Probar conexión') }}</button>
                                        <button type="submit" class="btn btn-primary">{{ _('Guardar cambios') }}</button>
                                    </div>
                                </form>
                            </div>
                            
                            <!-- Backup Settings -->
                            <div id="backup" class="tab-pane">
                                <div class="backup-actions">
                                    <button class="btn btn-primary">
                                        <i class="fas fa-database"></i> {{ _('Crear respaldo completo') }}
                                    </button>
                                    <button class="btn btn-secondary">
                                        <i class="fas fa-table"></i> {{ _('Respaldar estructura') }}
                                    </button>
                                    <button class="btn btn-secondary">
                                        <i class="fas fa-save"></i> {{ _('Respaldar datos') }}
                                    </button>
                                </div>
                                
                                <div class="backup-history">
                                    <h4>{{ _('Historial de respaldos') }}</h4>
                                    <table class="backup-table">
                                        <thead>
                                            <tr>
                                                <th>{{ _('Fecha') }}</th>
                                                <th>{{ _('Tipo') }}</th>
                                                <th>{{ _('Tamaño') }}</th>
                                                <th>{{ _('Acciones') }}</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for backup in backupHistory %}
                                            <tr>
                                                <td>{{ backup.date }}</td>
                                                <td>{{ backup.type }}</td>
                                                <td>{{ backup.size }}</td>
                                                <td class="actions">
                                                    <button class="btn-icon">
                                                        <i class="fas fa-download"></i>
                                                    </button>
                                                    <button class="btn-icon">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                    <button class="btn-icon">
                                                        <i class="fas fa-redo-alt"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                                
                                <div class="backup-settings">
                                    <h4>{{ _('Configuración de respaldos') }}</h4>
                                    <form class="settings-form">
                                        <div class="form-group">
                                            <label for="autoBackup">{{ _('Respaldos automáticos') }}</label>
                                            <select id="autoBackup">
                                                <option value="disabled" {{ settings.autoBackup == 'disabled' ? 'selected' : '' }}>{{ _('Desactivados') }}</option>
                                                <option value="daily" {{ settings.autoBackup == 'daily' ? 'selected' : '' }}>{{ _('Diarios') }}</option>
                                                <option value="weekly" {{ settings.autoBackup == 'weekly' ? 'selected' : '' }}>{{ _('Semanales') }}</option>
                                                <option value="monthly" {{ settings.autoBackup == 'monthly' ? 'selected' : '' }}>{{ _('Mensuales') }}</option>
                                            </select>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label for="backupRetention">{{ _('Retención de respaldos (días)') }}</label>
                                            <input type="number" id="backupRetention" value="{{ settings.backupRetention }}">
                                        </div>
                                        
                                        <div class="form-actions">
                                            <button type="submit" class="btn btn-primary">{{ _('Guardar cambios') }}</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </main>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        // Inicializar AOS
        AOS.init({
            duration: 800,
            once: true
        });
        
        // Navegación de pestañas
        document.addEventListener('DOMContentLoaded', function() {
            // Tabs de navegación principal
            const navItems = document.querySelectorAll('.admin-nav li');
            const sections = document.querySelectorAll('.admin-section');
            
            navItems.forEach(item => {
                item.addEventListener('click', function() {
                    const tabId = this.getAttribute('data-tab');
                    
                    // Desactivar todos los items y secciones
                    navItems.forEach(nav => nav.classList.remove('active'));
                    sections.forEach(section => section.classList.remove('active'));
                    
                    // Activar el item y sección seleccionados
                    this.classList.add('active');
                    document.getElementById(tabId).classList.add('active');
                });
            });
            
            // Tabs de configuración
            const settingsTabs = document.querySelectorAll('.tabs-nav li');
            const tabPanes = document.querySelectorAll('.tab-pane');
            
            settingsTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    const tabId = this.getAttribute('data-tab');
                    
                    // Desactivar todos los tabs y panes
                    settingsTabs.forEach(t => t.classList.remove('active'));
                    tabPanes.forEach(p => p.classList.remove('active'));
                    
                    // Activar el tab y pane seleccionados
                    this.classList.add('active');
                    document.getElementById(tabId).classList.add('active');
                });
            });
            
            // Inicializar gráficos
            initCharts();
        });
        
        function initCharts() {
            // Gráfico de vistas mensuales
            const viewsCtx = document.getElementById('viewsChart').getContext('2d');
            new Chart(viewsCtx, {
                type: 'line',
                data: {
                    labels: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'],
                    datasets: [{
