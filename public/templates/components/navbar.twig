{% set nav_items = [
    {'route': '/', 'name': _('Inicio')},
    {'route': '/random', 'name': _('Aleatorio')},
    {'route': '/statistics', 'name': _('Estadísticas')},
    {'route': '/about', 'name': _('Acerca de')},
    {'route': '/docs/api', 'name': _('Api')}
] %}

{% set languages = {
    'es': {'icon': '🇪🇸', 'name': 'Español'},
    'en': {'icon': '🇬🇧', 'name': 'English'}, 
    'ca': {'icon': '🐱', 'name': 'Català'}
} %}

<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
        <a class="navbar-brand" href="/">
            <i class="fas fa-mushroom"></i> {{ _('FungiDB') }}
        </a>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
            aria-controls="navbarMain" aria-expanded="false" aria-label="{{ _('Toggle navigation') }}">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarMain">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {% for item in nav_items %}
                    <li class="nav-item {{ current_route == item.route ? 'active' : '' }}">
                        <a class="nav-link" href="{{ item.route }}">{{ item.name }}</a>
                    </li>
                {% endfor %}
            </ul>

            <ul class="navbar-nav ms-auto">
                {# Estado de autenticación #}
                <li id="auth-status" class="d-none">
                    <span class="nav-link">
                        <div class="spinner-border spinner-border-sm text-light" role="status">
                            <span class="visually-hidden">{{ _('Cargando...') }}</span>
                        </div>
                    </span>
                </li>
                
                {# Menú desplegable de usuario #}
                <li id="user-dropdown" class="nav-item dropdown d-none">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user-circle"></i>
                        <span id="username-display"></span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/profile">
                            <i class="fas fa-id-card"></i> {{ _('Mi Perfil') }}
                        </a>
                        <li id="admin-option" class="d-none">
                            <a class="dropdown-item" href="/admin">
                                <i class="fas fa-cogs"></i> {{ _('Administración') }}
                            </a>
                        </li>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#" onclick="logout(); return false;">
                            <i class="fas fa-sign-out-alt"></i> {{ _('Cerrar sesión') }}
                        </a>
                    </ul>
                </li>
                
                {# Botones de login/registro #}
                <li id="login-button" class="nav-item d-none">
                    <a class="nav-link btn btn-outline-light btn-sm me-2" href="/login">{{ _('Iniciar sesión') }}</a>
                </li>
                <li id="register-button" class="nav-item d-none">
                    <a class="nav-link btn btn-primary btn-sm" href="/register">{{ _('Registrarse') }}</a>
                </li>

                {# Selector de idioma #}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-globe"></i>
                        {% set lang_code = {
                            'es': 'ES',
                            'en': 'EN',
                            'ca': 'CA'
                        } %}
                        <span class="d-none d-md-inline ml-1">{{ lang_code[idioma_actual] }}</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                        {% for code, lang in languages %}
                            <li>
                                <button type="button" 
                                        class="dropdown-item lang-switch {{ idioma_actual == code ? 'active' }}" 
                                        data-lang="{{ code }}">
                                    {{ lang.icon }} {{ lang.name }}
                                </button>
                            </li>
                        {% endfor %}
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<script src="/assets/scripts/lang_switch.js"></script>
<script src="/assets/scripts/navbar.js"></script>