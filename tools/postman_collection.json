    "item": [
      {
        "name": "Auth",
        "item": [
          {
            "name": "Login",
            "request": {
              "method": "POST",
              "url": {
                "raw": "http://localhost/api/auth/login",
                "protocol": "http",
                "host": [
                  "localhost"
                ],
                "path": [
                  "api",
                  "auth",
                  "login"
                ]
              },
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"username\": \"user_example\",\n  \"password\": \"password123\"\n}"
              },
              "description": "Autentica al usuario con nombre de usuario y contrase\u00f1a. Devuelve un token JWT en caso de \u00e9xito."
            }
          },
          {
            "name": "Logout",
            "request": {
              "method": "POST",
              "url": {
                "raw": "http://localhost/api/auth/logout",
                "protocol": "http",
                "host": [
                  "localhost"
                ],
                "path": [
                  "api",
                  "auth",
                  "logout"
                ]
              },
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer <JWT_TOKEN>"
                }
              ],
              "description": "Cierra la sesi\u00f3n del usuario actual (invalida token/sesi\u00f3n)."
            }
          },
          {
            "name": "Verify Token",
            "request": {
              "method": "GET",
              "url": {
                "raw": "http://localhost/api/auth/verify",
                "protocol": "http",
                "host": [
                  "localhost"
                ],
                "path": [
                  "api",
                  "auth",
                  "verify"
                ]
              },
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer <JWT_TOKEN>"
                }
              ],
              "description": "Verifica el estado de autenticaci\u00f3n del usuario actual (requiere token o sesi\u00f3n v\u00e1lida)."
            }
          }
        ]
      },
